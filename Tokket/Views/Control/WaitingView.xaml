<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Tokket.Views.Control.WaitingView"
             >
    <ContentView.Content>
        <Frame HasShadow="False" Opacity="0.5" CornerRadius="15" BackgroundColor="Black">
            <StackLayout VerticalOptions="Center" Spacing="10">
                <Label Text="Please wait..." TextColor="White" HorizontalTextAlignment="Center"/>
                <ActivityIndicator IsRunning="True" Color="White" Scale="2"/>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>
