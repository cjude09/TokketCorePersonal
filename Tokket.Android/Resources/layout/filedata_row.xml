<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_height="40dp">
     <RelativeLayout 
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        
    <TextView
         android:drawableLeft="@drawable/file_24px"
        android:id="@+id/lblFileName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxLines="1"
            android:maxLength="20"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
            android:layout_alignParentLeft="true"
        android:textColor="@android:color/black"/>
        <ImageView
            android:id="@+id/iconComplete"
            android:src="@drawable/circlecheck"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/removeItem"
            android:visibility="gone"
            android:contentDescription="description" />
        <ProgressBar
            android:id="@+id/fileUploadProgress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circleprogress"
            android:layout_toLeftOf="@id/removeItem"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
        <Button
            android:id="@+id/removeItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/trash_icon"
               android:layout_alignParentRight="true"
             android:gravity="start"
            android:text="Remove"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
