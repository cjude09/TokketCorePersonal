<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
       xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/realtiveHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
       <TextView
        android:text="Tok Document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="30dp"/>   
    <Button
        android:id="@+id/closeBTN"
        android:background="@drawable/close_24px"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:textAlignment="center"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1header"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
         android:layout_marginBottom="15dp"
        
          android:layout_below="@id/realtiveHeader"/>
         <LinearLayout
        android:id="@+id/linearRecycler"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
         android:layout_below="@id/view1header"
        android:layout_above="@id/findFileBTN">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDocs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </LinearLayout>
                  <Button
            android:id="@+id/findFileBTN"
            android:text="Find File"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
  
        android:layout_above="@id/view1footer"
            />
     <View
        android:id="@+id/view1footer"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
         android:layout_marginBottom="5dp"
            android:layout_above="@id/relativeFooter"/>
       <RelativeLayout
        android:id="@+id/relativeFooter"
                            android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
          <Button
            android:id="@+id/uploadBTN"
            android:background="@drawable/blue_button"
            android:text="Upload"
            android:textColor="@color/WHITE"
            android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="45dp"/>
                        <Button
            android:id="@+id/cancelBTN"
            android:text="CLOSE"
            android:textColor="@color/WHITE"
            android:layout_toLeftOf="@id/uploadBTN"
               android:background="@drawable/gray_button"
            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"/>
    </RelativeLayout>
       <LinearLayout
            android:id="@+id/uploadLinearProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout">
            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Uploading files"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:textColor="@android:color/white"
                 android:gravity="center"
                 android:padding="5dp"/>
            <ProgressBar
                android:id="@+id/ProgressBarLogin"
                android:theme="@style/CircularProgress"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:padding="5dp"/>
        </LinearLayout>
</RelativeLayout>
