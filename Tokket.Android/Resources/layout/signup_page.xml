<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <!--   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Type"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"/>-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Account Type"
                android:orientation="horizontal">
                <AutoCompleteTextView
                    android:id="@+id/SpinnerSignupAccountType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="16sp"
                    android:editable="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:background="@color/placeholder_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@color/icons"
                    android:padding="15dp"
                    android:rowCount="13"
                    android:numColumns="0">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:id="@+id/inputLayoutUpGroupType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Group Type"
                        android:orientation="horizontal">
                        <AutoCompleteTextView
                            android:id="@+id/SpinnerSignupGroupType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="16sp"
                            android:editable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:id="@+id/LinearSignUpGroupOwnerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:id="@+id/inputLayoutGroupTypeHeader"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:hint="Account Owner's First Name"
					        app:counterEnabled="true"
					        app:counterMaxLength="25">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/EditSignupOwnerName"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:maxLength="25"
                                android:textColor="@android:color/black" 
                                android:textStyle="normal" />
                         </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/TextErrorInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please fill out the rest"
                            android:textSize="16sp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:background="@drawable/white_bg_with_border"
                            android:textColor="@android:color/holo_red_light"/>
                    </LinearLayout>
                    <!--PayRequire-->
                    <TextView
                        android:id="@+id/payrequireText"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Group account will cost $2.99\nDo you want to continue?"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"/>
                    <Button
                        android:id="@+id/payrequireAcceptBtn"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:text="ACCEPT"
                        android:onClick="OnClickPayAccept"
                        android:background="@drawable/myButtonBlue"
                        android:textColor="@android:color/white"/>
                    <Button
                        android:id="@+id/payrequireDeclineBtn"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:text="DECLINE"
                        android:onClick="OnClickCancel"
                        android:background="@drawable/myButtonRed"
                        android:textColor="@android:color/white"/>
                    <!--Display Name-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/inputLayoutDisplayName"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:hint="Display Name"
					    app:counterEnabled="true"
					    app:counterMaxLength="25"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_column="0"
                        android:layout_row="2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtSignupDisplayName"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:padding="10dp"
                            android:maxLength="25"
                            android:textColor = "@android:color/black"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--Birthday-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/inputLayoutBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Birthday"
                        android:orientation="horizontal"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:gravity="left"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        app:errorTextAppearance="@style/error_appearance">
                        <AutoCompleteTextView
                            android:id="@+id/txtSignupBday"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="none"
                            android:textSize="16sp"
                            android:padding="10dp"
                            android:editable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--Country-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:id="@+id/inputLayoutCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Country"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_column="0"
                        android:layout_row="4">
                        <AutoCompleteTextView
                            android:id="@+id/txtSignupCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="16sp"
                            android:editable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--State-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:id="@+id/inputLayoutState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="State"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_column="0"
                        android:layout_row="5">
                        <AutoCompleteTextView
                            android:id="@+id/txtSignupState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="16sp"
                            android:editable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Email-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/inputLayoutEmail"
                        android:layout_width="match_parent"
					    android:layout_height="wrap_content"
                        android:hint="Email"
                        android:layout_column="0"
                        android:layout_row="6"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        app:errorTextAppearance="@style/error_appearance">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtSignupEmail"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:maxLength="100" 
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--EmailCheck-->
                    <TextView
                        android:id="@+id/emailcheckText"
                        android:layout_row="7"
                        android:layout_column="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Email address and the subsequent password will be used by all family members added to this account, Do you want to continue?"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"/>

                    <Button
                        android:id="@+id/emailAcceptBtn"
                        android:layout_row="8"
                        android:layout_column="0"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:text="ACCEPT"
                        android:onClick="OnClickEmailAccept"
                        android:visibility="gone"
                        android:background="@drawable/myButtonBlue"
                        android:textColor="@android:color/white"/>
                    <Button
                        android:id="@+id/emailDeclineBtn"
                        android:layout_row="9"
                        android:layout_column="0"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:text="DECLINE"
                        android:onClick="OnClickCancel"
                        android:visibility="gone"
                        android:background="@drawable/myButtonRed"
                        android:textColor="@android:color/white"/>
                    <!--Password-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/inputLayoutPassword"
                        android:layout_width="match_parent"
					    android:layout_height="wrap_content"
                        android:hint="Password"
                        android:layout_column="0"
                        android:layout_row="7"
                        app:counterEnabled="true"
					    app:counterMaxLength="100"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        app:errorTextAppearance="@style/error_appearance">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtSignupPassword"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:inputType="textPassword"
                            android:textColor = "@android:color/black"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--Confirm Password-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/inputLayoutConfirmPassword"
                        android:layout_width="match_parent"
					    android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        android:layout_column="0"
                        android:layout_row="8"
                        app:counterEnabled="true"
					    app:counterMaxLength="100"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        app:errorTextAppearance="@style/error_appearance">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtSignupConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:inputType="textPassword"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--Subbaccount Key-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/inputLayoutSubKey"
                        android:layout_width="match_parent"
					    android:layout_height="wrap_content"
                        android:hint="Subaccount Key (Optional)"
					    app:counterEnabled="true"
					    app:counterMaxLength="100"
                        android:layout_column="0"
                        android:layout_row="9"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtSubKey"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:inputType="textPassword"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor = "@android:color/black"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--Image-->
                    <LinearLayout
                        android:id="@+id/image_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="0"
                        android:layout_row="10"
                        android:visibility="gone"
                        android:padding="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingBottom="10dp"
                            android:text="Select an image."
                            android:textSize="16sp"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/ImgSignupPhoto"
                            android:scaleType="fitCenter"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <Button
                                android:id="@+id/btnSignupBrowseImg"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="@color/primary_dark"
                                android:text="Browse..."
                                android:padding="10dp"
                                android:textAllCaps="false"
                                android:onClick="OnClickAddTokImgMain"
                                android:textColor="@android:color/white"/>
                            <Button
                                android:id="@+id/btnSignupRemoveImg"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="@color/red_500"
                                android:text="Remove Image"
                                android:visibility="gone"
                                android:padding="10dp"
                                android:textAllCaps="false"
                                android:onClick="OnClickRemoveTokImgMain"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--Terms of Service-->
                    <LinearLayout
                        android:id="@+id/terms_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_column="0"
                        android:layout_row="11"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal|fill_horizontal">
                        <CheckBox
                            android:id="@+id/chkSignupTermsofService"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I agree to the "
                            android:gravity="center"
                            android:textSize="16sp"
                            android:buttonTint="@android:color/darker_gray"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/lblSignupTermsofService"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms of Service."
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnSignupIndividual"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_column="0"
                        android:textSize="15sp"
                        android:layout_row="12"
                        android:textAllCaps="false"
                        android:layout_below="@id/chkSignupTermsofService"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/mybutton"
                        android:text="Register"
                        android:visibility="gone"
                        android:textColor="@android:color/white"/>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <!--Progress-->
    <LinearLayout
        android:id="@+id/LinearProgress_Signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="#80000000">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10"
            android:backgroundTint="#90000000"
            android:background="@drawable/tileview_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>