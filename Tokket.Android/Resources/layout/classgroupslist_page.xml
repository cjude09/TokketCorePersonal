
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bgColor">
    <include
        android:id="@+id/includeHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_layout"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/includeHeaderLayout"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|enterAlways"
                app:contentScrim="?attr/colorPrimary"
                android:fitsSystemWindows="true">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/bgColor">
                     <LinearLayout
                        android:id="@+id/linearDelete"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnSort"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            style="@style/buttonRed"
                            android:id="@+id/btnRemoveOpportunity"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="-Remove"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/WHITE"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            style="@style/buttonRed"
                            android:id="@+id/btnDelete"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="Delete"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/WHITE"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            style="@style/buttonGrey"
                            android:id="@+id/btnCancelDelete"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="Cancel"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/WHITE"
                            android:visibility="gone"
                            tools:visibility="visible"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnSort"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:textColor="@color/BLACK"
                        android:background="@color/transparent"
                        android:text="Sort"
                        android:layout_marginTop="10dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:drawableRight="@drawable/baseline_sort_black_24"
                        android:gravity="center"/>

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexBox1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        app:flexWrap="nowrap"
                        app:alignItems="flex_start"
                        app:alignContent="flex_start"
                        app:justifyContent="flex_start"
                        app:layout_flexBasisPercent="100%"
                        app:layout_constraintTop_toBottomOf="@id/linearDelete"
                        app:layout_constraintStart_toStartOf="parent">
                        <RadioButton
                            android:id="@+id/btnOwnedGroups"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Owned Groups"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:checked="true"
                            android:button="@null"
                            android:textColor="@color/WHITE"
                            android:background="@drawable/radio_group_owned_groups"
                            android:textAllCaps="false"
                            app:layout_flexBasisPercent="50%"/>
                        <RadioButton
                            android:id="@+id/btnAll"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="My Groups"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:checked="false"
                            android:button="@null"
                            android:textColor="@color/WHITE"
                            android:background="@drawable/radio_group_all"
                            android:textAllCaps="false"
                            app:layout_flexBasisPercent="50%"/>
                        <RadioButton
                            android:id="@+id/btnClass"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Class"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:button="@null"
                            android:textColor="@color/WHITE"
                            android:background="@drawable/radio_group_class"
                            android:textAllCaps="false"
                            app:layout_flexBasisPercent="50%"/>
                        <RadioButton
                            android:id="@+id/btnClubs"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Clubs"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:button="@null"
                            android:textColor="@color/WHITE"
                            android:background="@drawable/radio_group_clubs"
                            android:textAllCaps="false"
                            app:layout_flexBasisPercent="50%"/>
                    </com.google.android.flexbox.FlexboxLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        app:flexWrap="nowrap"
                        app:alignItems="flex_start"
                        app:alignContent="flex_start"
                        app:justifyContent="flex_start"
                        app:layout_flexBasisPercent="100%"
                        app:layout_constraintTop_toBottomOf="@id/flexBox1"
                        app:layout_constraintStart_toStartOf="parent">
                        <RadioButton
                            android:id="@+id/btnFaith"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Faith"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:button="@null"
                            android:textColor="@color/WHITE"
                            android:background="@drawable/radio_group_faith"
                            android:textAllCaps="false"
                            app:layout_flexBasisPercent="50%"/>
                        <RadioButton
                            android:id="@+id/btnTeams"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Teams"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:button="@null"
                            android:textColor="@color/WHITE"
                            android:background="@drawable/radio_group_teams"
                            android:textAllCaps="false"
                            app:layout_flexBasisPercent="50%"/>
                        <RadioButton
                            android:id="@+id/btnChurch"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Other"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:button="@null"
                            android:textColor="@color/WHITE"
                            android:background="@drawable/radio_group_church"
                            android:textAllCaps="false"
                            app:layout_flexBasisPercent="50%"/>
                        <RadioButton
                            android:id="@+id/btnStudy"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Study"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:button="@null"
                            android:textColor="@color/WHITE"
                            android:background="@drawable/radio_group_study"
                            android:textAllCaps="false"
                            app:layout_flexBasisPercent="50%"/>
                    </com.google.android.flexbox.FlexboxLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
         </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/limitStar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerClassGroupList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="?android:attr/actionBarSize"
                android:scrollbarStyle="outsideOverlay"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:divider="@android:color/transparent"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

         <LinearLayout        
             android:visibility="gone"
             android:id="@+id/limitStar" 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="20dp"
             app:layout_anchor="@+id/RecyclerClassGroupList"
             app:layout_anchorGravity="center|bottom">
             <ImageView
                 android:id="@+id/tokstar1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/crc_guy1"/>
             <TextView
                 android:text="There are no additional groups!"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:textSize="20dp"
                 android:gravity="center"
                 android:layout_gravity="center"
                 android:textColor="@color/WHITE"
                 android:background="@color/red_500"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_anchor="@+id/RecyclerClassGroupList"
            app:layout_anchorGravity="center|top">
            <ProgressBar
                android:id="@+id/bottomProgress"
                android:theme="@style/CircularProgressBlue"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_marginBottom="60dp"
                android:layout_height="26dp"
                android:layout_width="26dp"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </LinearLayout> 

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_AddClassGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/white_plus_icon"
            android:clickable="true"
            android:backgroundTint="@color/colorAccent"
            android:scaleType="fitCenter"
            app:borderWidth="0dp"
            app:useCompatPadding="true"
            app:layout_behavior="@string/fab_scroll_translation_autohide_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/TextNothingFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone"
        android:textColor="@color/DIM_GREY"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>