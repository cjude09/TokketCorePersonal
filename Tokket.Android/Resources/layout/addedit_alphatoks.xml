<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_addedittok"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/btn_addedit"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="+ Add Tok"
                android:textColor="@color/WHITE"
                android:gravity="right"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CATEGORY"/>
        <EditText
            android:id="@+id/txtCategory"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/rounded_edittext_white_bg"
            android:inputType="text"
            android:hint="i.e. Algebra"
            android:maxLength="50"/>
        <TextView
            android:id="@+id/lblCategorycount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="0/50"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abbreviation"/>
        <EditText
            android:id="@+id/txtAbbr"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/rounded_edittext_white_bg"
            android:inputType="text"
            android:hint="Ex: LOL"
            android:maxLength="200"/>
        <TextView
            android:id="@+id/lblAbbrCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="0/200"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meaning"/>
        <EditText
            android:id="@+id/txtMeaning"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/rounded_edittext_white_bg"
            android:inputType="text"
            android:hint="Ex: Laugh Out Loud"
            android:maxLength="500"/>
        <TextView
            android:id="@+id/lblMeaningcounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="0/500"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@id/spn_country"
            android:background="@android:drawable/spinner_dropdown_background"/>
        <LinearLayout
            android:id="@id/linearState"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"/>
            <Spinner
                android:id="@id/spn_state"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/spinner_dropdown_background"/>
        </LinearLayout>
    </LinearLayout>
     <LinearLayout
		android:id="@+id/linearProgress_toks"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center"
		android:background="#80000000">
		<ProgressBar
			style="@style/Widget.AppCompat.ProgressBar"
			android:layout_height="96dp"
			android:layout_width="96dp"
			android:layout_gravity="center"
			android:indeterminate="true"
			android:layout_centerInParent="true"/>
		<TextView
            android:id="@+id/txtProgress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Loading..."
			android:textSize="16sp"
			android:textColor="@android:color/white"
			android:gravity="center"
			android:layout_gravity="center"/>
	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
