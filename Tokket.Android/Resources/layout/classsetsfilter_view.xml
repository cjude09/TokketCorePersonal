<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:drawableRight="@drawable/outline_filter_alt_black_24"
            android:text="Filter"
            android:textColor="@color/BLACK"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnclose"
            android:layout_alignParentRight="true"
            android:background="@drawable/close_24px"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <GridLayout
        android:columnCount="2"
        android:rowCount="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/feedOptions"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                  android:layout_row="0"
            android:layout_column="0"
                
                       >
            <TextView
                android:text="FEED OPTIONS"
                android:textColor="@color/BLACK"
                android:textSize="15dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnPublic"
                android:background="@color/transparent"
                android:text="Public"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnMyclasssets"
                android:background="@color/transparent"
                android:text="My Class Sets"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/feedType"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_row="0"
            android:layout_column="1"

       >
            <TextView
                android:text="Type"
                android:textStyle="bold"
                android:textColor="@color/BLACK"
                android:textSize="15dp"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnAll"
                android:background="@color/transparent"
                android:text="All"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnPlayable"
                android:background="@color/transparent"
                android:text="Playable"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnNonPlayable"
                android:background="@color/transparent"
                android:text="Non-Playable"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </GridLayout>

</LinearLayout>
