<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="info.androidhive.shimmer.MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tokcards_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3a67a2">
        <ImageView
            android:src="@drawable/tokcards"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:scaleType="fitCenter"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_marginTop="?attr/actionBarSize">
        <ProgressBar
            android:id="@+id/cardProgress"
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:scaleY="9"
            android:layout_marginBottom="25dp"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"/>
        <TextView
            android:id="@+id/cardProgressText"
            android:background="#00000000"
            android:layout_alignTop="@id/cardProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1/7"
            android:gravity="center"
            android:textColor="@android:color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center">
            <Button
                android:id="@+id/btnTokCardsPlay"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Play"
                android:maxLines="1"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#007bff"/>
            <Button
                android:id="@+id/btnTokCardShuffle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="random Shuffle"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#007bff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btnTokCardOptions"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="cog Options"
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:backgroundTint="#007bff"/>
            <Button
                android:id="@+id/btnTokCardFlip"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:text="Flip all cards"
                android:textColor="@android:color/white"
                android:backgroundTint="#007bff"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <FrameLayout
                android:id="@+id/frameTokCardMini"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/FabMiniGamePrevious"
                app:layout_constraintTop_toTopOf="parent">
                <ProgressBar
                    android:id="@+id/progressbarTokCardLoading"
                    android:theme="@style/CircularProgress"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_height="106dp"
                    android:layout_width="106dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </FrameLayout>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FabMiniGamePrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/left_arrow"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_mid"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FabMiniGameNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/right_arrow"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_mid"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <!--    <TextView
                android:id="@+id/btnTokCardFlip"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/two_way_arrows"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:clickable="true"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/FabMiniGameNext"
                app:layout_constraintBottom_toBottomOf="@id/FabMiniGameNext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flip all cards"
                android:clickable="true"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/btnTokCardFlip"
                app:layout_constraintEnd_toEndOf="@id/btnTokCardFlip"
                app:layout_constraintBottom_toBottomOf="parent"/>
-->
            <TextView
                android:id="@+id/txtTCLoadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load More..."
                android:clickable="true"
                android:textSize="18sp"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/FabMiniGameNext"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_mid"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical_mid"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</RelativeLayout >