<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"      
        app:layout_constraintTop_toBottomOf="@id/contraintToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gridAddClassGroupImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:id="@+id/lblEnterClassGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Class Group Information:"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <LinearLayout
                android:id="@+id/linearGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblEnterClassGroup"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group Name"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"/>
                <com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
					app:counterEnabled="true"
					app:counterMaxLength="25">
                    <EditText
                        android:id="@+id/EditACGGroupName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:maxLength="25"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="@drawable/rounded_edittext_white_bg"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
             <LinearLayout
                android:id="@+id/linearGroupType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearGroupName"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group Type"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"/>
                <Spinner
					android:id="@+id/spinnerGroupType"
                    style="@style/spinner_style"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:textStyle="normal"
					android:spinnerMode="dropdown"
					android:textSize="16sp"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearGroupType"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:layout_row="0"
                    android:layout_column="0"/>
                <com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
					app:counterEnabled="true"
					app:counterMaxLength="200">
                    <EditText
                        android:id="@+id/EditACGDescription"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:maxLength="200"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="@drawable/rounded_edittext_white_bg"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearDescription"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="School"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:layout_row="0"
                    android:layout_column="0"/>
                <com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
					app:counterEnabled="true"
					app:counterMaxLength="50">
                    <EditText
                        android:id="@+id/EditACGSchool"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:maxLength="50"
                        android:textSize="16sp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="@drawable/rounded_edittext_white_bg"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/lblSelectPNGJPEG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a PNG or JPEG icon, max size 500 KB (optional)"
                android:textColor="@color/timestamp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearSchool"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/addclassgroup_imagebrowse"
				android:layout_width="match_parent"
				android:layout_height="120dp"
                android:padding="@dimen/padding_10"
				android:scaleType="fitCenter"
                android:layout_row="6"
                android:layout_column="0"
                android:background="@drawable/linearboard_nopadding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblSelectPNGJPEG"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Button
				android:id="@+id/btnAddClassGroup_btnBrowseImage"
				android:layout_width="130dp"
				android:layout_height="wrap_content"
				android:backgroundTint="@color/colorAccent"
				android:text="Browse..."
				android:padding="10dp"
				android:textAllCaps="false"
				android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addclassgroup_imagebrowse"
                app:layout_constraintEnd_toEndOf="parent"/>
			<Button
				android:id="@+id/btnAddClassGroupRemoveImgMain"
				android:layout_width="130dp"
				android:layout_height="wrap_content"
				android:backgroundTint="@android:color/holo_red_dark"
				android:text="Remove Image"
				android:visibility="gone"
				android:padding="10dp"
				android:textAllCaps="false"
				android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addclassgroup_imagebrowse"
                app:layout_constraintEnd_toEndOf="parent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"           
                android:src="@drawable/crc_girl1"  
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue1"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txt_dialogue1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp" 
                android:text="1. Tap Tok Group in the left menu from the home page"
                android:textColor="@color/WHITE"
                android:gravity="center_horizontal"        
                android:background="@drawable/speech_bubble_blue"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/imgGuide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

             <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"            
                android:src="@drawable/crc_guy1"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue2"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_dialogue2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp" 
                android:layout_marginTop="20dp"
                android:text="2. Tap floating button"
                android:textColor="@color/WHITE"
                android:gravity="center_horizontal"        
                android:background="@drawable/speech_bubble_blue"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/imgGuide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue1"/>

            <ImageView
                android:id="@+id/imageViewArrowGuide3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/white_arrow_left"
                android:scaleType="fitStart"
                android:tint="@color/red_500"
                android:rotation="180"           
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/linearGroupName"
                app:layout_constraintBottom_toBottomOf="@id/linearGroupName"
                app:layout_constraintStart_toStartOf="@id/linearGroupName"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"             
                android:src="@drawable/crc_girl2"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue3"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txt_dialogue3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp" 
                android:layout_marginTop="20dp"
                android:text="3. Enter the Group Name and Select the Group Type. A Group can be a Class, Club, or Team"
                android:textColor="@color/WHITE"
                android:gravity="center_horizontal"        
                android:background="@drawable/speech_bubble_blue"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/imgGuide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue2"/>

            <ImageView
                android:id="@+id/imageViewArrowGuide4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/white_arrow_left"
                android:scaleType="fitStart"
                android:tint="@color/red_500"
                android:rotation="180"           
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/linearDescription"
                app:layout_constraintBottom_toBottomOf="@id/linearDescription"
                app:layout_constraintStart_toStartOf="@id/linearDescription"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"     
                app:civ_circle_background_color="@android:color/white"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/colorAccent"
                android:src="@drawable/tokstarguy2"  
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue4"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_dialogue4"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp" 
                android:layout_marginTop="20dp"
                android:text="4. You can add a description if you want"
                android:textColor="@color/WHITE"
                android:gravity="center_horizontal"        
                android:background="@drawable/speech_bubble_blue"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/imgGuide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue3"/>

             <ImageView
                android:id="@+id/imageViewArrowGuide5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/white_arrow_left"
                android:scaleType="fitStart"
                android:tint="@color/red_500"
                android:rotation="180"           
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/linearSchool"
                app:layout_constraintBottom_toBottomOf="@id/linearSchool"
                app:layout_constraintStart_toStartOf="@id/linearSchool"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide5"
                android:layout_width="50dp"
                android:layout_height="50dp"     
                app:civ_border_width="3dp"
                app:civ_border_color="@color/colorAccent"
                android:src="@drawable/tokstargirl2"  
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue5"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txt_dialogue5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp" 
                android:layout_marginTop="20dp"
                android:text="5. Enter the institution or school that the group is a part of."
                android:textColor="@color/WHITE"
                android:gravity="center_horizontal"        
                android:background="@drawable/speech_bubble_blue"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/imgGuide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue4"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide6"
                android:layout_width="50dp"
                android:layout_height="50dp"     
                app:civ_border_width="3dp"
                app:civ_border_color="@color/colorAccent"
                android:src="@drawable/tokstarguy3"  
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue6"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txt_dialogue6"
                android:layout_width="0dp"
                android:layout_height="60dp"     
                android:paddingLeft="20dp"
                android:paddingRight="5dp" 
                android:layout_marginTop="20dp"
                android:text="6. Click on the Add Group button to finish creating your group."
                android:textColor="@color/WHITE"
                android:gravity="center_horizontal"        
                android:background="@drawable/speech_bubble_blue"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/imgGuide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <!--ToolBar-->
	<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contraintToolBar"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:background="@color/colorAccent">
		<TextView
			android:id="@+id/btnAddClassGroupCancel"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:gravity="center_horizontal|center_vertical"
			android:textSize="16sp"
			android:textStyle="bold"
			android:text="Cancel"
            android:layout_marginStart="15dp"
			android:background="?attr/selectableItemBackground"
			android:clickable="true"
			android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
		<TextView
			android:id="@+id/btnAddClassGroupSave"
			android:background="?attr/selectableItemBackground"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:text="Add Group"
			android:layout_gravity="right"
			android:gravity="right|center"
            android:layout_marginEnd="15dp"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imageViewArrowGuide6"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:src="@drawable/white_arrow_left"
            android:scaleType="fitStart"
            android:tint="@color/red_500"
            android:rotation="180"           
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintEnd_toStartOf="@id/btnAddClassGroupSave"
            app:layout_constraintTop_toTopOf="@id/btnAddClassGroupSave"
            app:layout_constraintBottom_toBottomOf="@id/btnAddClassGroupSave"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
    <View
		android:id="@+id/viewTapCancel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/contraintToolBar"
		app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
