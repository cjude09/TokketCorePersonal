<androidx.coordinatorlayout.widget.CoordinatorLayout 
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:paddingStart="@dimen/padding_10"
   android:paddingEnd="@dimen/padding_10"
   android:paddingTop="3dp"
   android:paddingBottom="3dp">
    <!--Tok Image-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridTokImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_192sdp" 
        android:padding="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameImage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewUserPhotoImg"
                android:layout_width="51dp"
                android:layout_height="51dp"
                app:cardCornerRadius="24dp"  
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:id="@+id/imageTokImgUserPhoto"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageViewHandleImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardViewUserPhotoImg"
            app:layout_constraintEnd_toStartOf="@id/img_tokimgFlag"/>

        <LinearLayout
            android:id="@+id/linearRowUsernameImg"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardViewUserPhotoImg"
            app:layout_constraintEnd_toStartOf="@id/img_tokimgFlag">
            <TextView
                android:id="@+id/lbl_Imgnameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"/>
            <TextView
                android:id="@+id/lbl_royaltitleImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_small_material"/>
            <ImageView
                android:id="@+id/imgtile_stickerimageImg"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <ImageView
            android:layout_width="57dp"
            android:layout_height="51dp"
            android:id="@+id/img_tokimgFlag"
            android:padding="3dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txtLinkImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="link"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" 
            android:layout_gravity="end"
            android:clickable="true"  
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frameImage1"/>

        <ImageView
            android:id="@+id/imgTokGroupImage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"  
            android:layout_marginEnd="@dimen/_5sdp"
            android:scaleType="fitEnd" 
            tools:src="@drawable/tooltip_list"
            app:layout_constraintTop_toBottomOf="@id/frameImage1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
           android:id="@+id/txtDateCreatedImg"
           android:gravity="center"
           tools:text="07/10/2021"
           android:layout_width="60dp"
           android:layout_height="wrap_content"
           android:textSize="11sp"
           android:textColor="@android:color/black"
           android:visibility="visible" 
           app:layout_constraintTop_toBottomOf="@id/frameImage1"
           app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/shared_mark"
            android:gravity="start"
            android:layout_gravity="start"
            android:text="(Shared)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:visibility="visible"      
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtDateCreatedImg"/>
        <TextView
            android:id="@+id/lblTokImgReferenceId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"     
            android:textColor="@android:color/black"
            android:text="Title"
            android:scrollHorizontally="true"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="11sp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lbl_tokimgprimarytext"/>
        <TextView
            android:id="@+id/lbl_tokimgprimarytext"
            android:layout_width="match_parent"
            android:layout_height="25dp"     
            android:textColor="@android:color/black"
            android:text="Title"
            android:scrollHorizontally="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="@dimen/abc_text_size_medium_material"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtDateCreatedImg"/>
        <TextView
           android:id="@+id/lbl_tokimgsecondarytext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"  
           android:text="Quote: Secondary Text"
           android:maxLines="1"
           android:ellipsize="end"
           android:visibility="gone"
           tools:visibility="visible"                    
           android:textSize="13dp"
            android:layout_marginTop="@dimen/_5sdp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/lbl_tokimgprimarytext"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/imgTokImgMain"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_tokimgsecondarytext"
            app:layout_constraintBottom_toTopOf="@id/linearDetailImage"/>
        <LinearLayout
            android:id="@+id/linearDetailImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgTokImgMain"
            app:layout_constraintBottom_toTopOf="@id/toktile_imgpurplegemtokimg"/>

        <!--BOTTOM-->
        <TextView
            android:id="@+id/lblTokImgType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BOTTOM"
            android:maxLines="2"
            android:ellipsize="end"  
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/toktile_imgpurplegemtokimg"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/toktile_imgpurplegemtokimg"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/purple_gem"
            android:visibility="invisible"
            android:scaleType="fitEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <TextView
            android:id="@+id/lblTokImgCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BOTTOM"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="?attr/selectableItemBackground"
            android:clickable="true" 
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp" 
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toEndOf="@id/toktile_imgpurplegemtokimg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <!--END OF BOTTOM-->

        <TextView
            android:id="@+id/txtToastLinkCopiedImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout"
            android:text="Link Copied!"
            android:padding="10dp"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/txtLinkImage"
            app:layout_constraintTop_toBottomOf="@id/txtLinkImage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Toks 2-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_192sdp"  
        android:visibility="gone"
        tools:background="@color/colorPrimaryLight">
        <!--Row 0-->
        <ImageView
            android:id="@+id/imageViewHandle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/linearRow1"
            app:layout_constraintEnd_toEndOf="@id/linearRow1"
            app:layout_constraintTop_toTopOf="@id/linearRow1"
            app:layout_constraintBottom_toBottomOf="@id/linearRow1"/>
        <LinearLayout
            android:id="@+id/linearRow1"
            android:layout_height="51dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/cardViewImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageFlag">
            <TextView
                android:id="@+id/lbl_nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="SAMPLE USER NAME"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/lbl_royaltitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="SAMPLE ROYAL TITLE"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImage"
            android:layout_width="51dp"
            android:layout_height="51dp"  
            app:cardCornerRadius="24dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:clickable="true"
            android:thicknessRatio="1.9"      
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:id="@+id/imageUserPhoto"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="57dp"
            android:layout_height="51dp"
            android:id="@+id/imageFlag" 
            android:padding="3dp"
            android:scaleType="fitXY"       
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imgtile_stickerimage"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewImage"/>
        <!--Row 1-->
        <TextView
            android:id="@+id/txtLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="link"
            android:textSize="18sp"
            android:textStyle="bold"   
            android:textColor="@android:color/black"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:rotation="45"
            android:background="?android:attr/selectableItemBackgroundBorderless" 
            app:layout_constraintTop_toBottomOf="@id/imgtile_stickerimage" 
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/imgTokGroup"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"   
            android:layout_marginEnd="@dimen/_5sdp"
            android:scaleType="fitEnd" 
            tools:src="@drawable/tooltip_list"
            app:layout_constraintTop_toBottomOf="@id/imageFlag"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtDateCreated"
            android:gravity="start"
            android:layout_gravity="start"
            tools:text="6d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@android:color/black"
            android:visibility="visible"    
            app:layout_constraintTop_toBottomOf="@id/cardViewImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cardViewImage"/>

        <TextView
            android:id="@+id/txtshared_mark"
            android:gravity="start"
            android:layout_gravity="start"
            android:text="(Shared)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:visibility="visible"    
            app:layout_constraintTop_toBottomOf="@id/imgtile_stickerimage"
            app:layout_constraintBottom_toTopOf="@id/lbl_row"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/lblTokReferenceId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"     
            android:textColor="@android:color/white"
            android:text="Title"
            android:scrollHorizontally="true"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="11sp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lbl_row"/>

        <TextView
            android:id="@+id/lbl_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="106"
            android:ellipsize="end"
            tools:text="SAMPLE TEXT SAMPLE TEXT"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtDateCreated"
            app:layout_constraintBottom_toTopOf="@id/secondarytext_row"/>

        <TextView
            android:id="@+id/secondarytext_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="second row"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_row"
            app:layout_constraintBottom_toTopOf="@id/detialLinear"/>
        <LinearLayout
            android:id="@+id/detialLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secondarytext_row"
            app:layout_constraintBottom_toTopOf="@id/lbl_englishPrimaryFieldText"/>
        <TextView
            android:id="@+id/lbl_englishPrimaryFieldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLength="35"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detialLinear"
            app:layout_constraintBottom_toTopOf="@id/linearEyeIcon"/>
        <TextView
            android:id="@+id/lblTokViewMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="Sample"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"              
            app:layout_constraintTop_toBottomOf="@id/lbl_englishPrimaryFieldText"
            app:layout_constraintBottom_toTopOf="@id/linearEyeIcon"/>
          <LinearLayout
             android:id="@+id/linearEyeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblTokViewMore"
            app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/btnTokInfoEyeIcon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="centerCrop"
                    android:textColor="@android:color/black"
                    android:background="@drawable/eye_black"/>

                <TextView
                    android:id="@+id/lblTokInfoViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="13sp"
                    tools:text="100"
                    android:textColor="@android:color/black"
                   />
            </LinearLayout>
        <!--Row 2-->
        <TextView
            android:id="@+id/lblTokType"
            android:layout_width="0dp" 
            android:layout_height="wrap_content"
            android:text="BOTTOM"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="start"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/toktile_imgpurplegem"/>
        <ImageView
            android:visibility="invisible"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:adjustViewBounds="true"
            android:id="@+id/toktile_imgpurplegem"
            android:src="@drawable/purple_gem"
            android:scaleType="centerCrop"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <TextView
            android:id="@+id/lblCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BOTTOM"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="end"
            android:textSize="10sp"
            android:textStyle="bold" 
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/toktile_imgpurplegem"/>
        <!--END OF ROW 2-->

        <TextView
            android:id="@+id/txtToastLinkCopied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout"
            android:text="Link Copied!"
            android:padding="10dp"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/txtLink"
            app:layout_constraintTop_toBottomOf="@id/txtLink"/>
    </androidx.constraintlayout.widget.ConstraintLayout> 

    <!--Grid Tok Pic-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridTokGroupPic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_192sdp"
        android:padding="5dp"
        android:visibility="gone">
        <androidx.appcompat.widget.AppCompatImageView   
            android:id="@+id/imageTokGroupPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"   
            android:scaleType="centerCrop"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>