<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="?attr/bgColor">
	
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
		android:layout_marginBottom="30dp">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="@dimen/padding_10">
			<LinearLayout
				android:id="@+id/linearClassGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="gone"
				android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent">
			<!--	<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:text="Class Group"
					android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
					/>-->
			<TextView
				android:id="@+id/txtClassGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark"/>
			</LinearLayout>

			<androidx.appcompat.widget.AppCompatCheckBox
				android:id="@+id/chkMasterCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:text="Master Copy - No Comments or Reactions"
				android:textSize="14sp"
                android:textColor="?attr/textColor"
                android:buttonTint="@color/colorAccent"
				android:layout_marginStart="@dimen/padding_10"
				app:layout_constraintStart_toStartOf="parent"  
				app:layout_constraintTop_toBottomOf="@id/linearClassGroup"/>

			<com.google.android.material.textfield.TextInputLayout
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
				android:id="@+id/textInputLayoutReferenceId"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:hintEnabled="true"
				app:counterEnabled="true"
				app:counterMaxLength="20"
				android:layout_marginTop="10dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/chkMasterCopy">
				<EditText
					android:id="@+id/txtReferenceId"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:textStyle="bold"
					android:textSize="16sp"
					android:hint="ID #: (Optional)"
					android:padding="10dp"
					android:maxLength="20"
					android:textColor="?attr/textColor"/>
			</com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
				android:id="@+id/linearClassTokType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
				android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/textInputLayoutReferenceId">
				<com.google.android.material.textfield.TextInputLayout
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Select Type"
					android:orientation="horizontal"
					android:layout_marginTop="5dp"
			  		android:layout_marginBottom="5dp">
					<AutoCompleteTextView
					    android:id="@+id/txtAddClassTokType"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:inputType="none"
					    android:textSize="16sp"
					    android:editable="false"/>
				</com.google.android.material.textfield.TextInputLayout>
				<com.google.android.material.textfield.TextInputLayout
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
					android:id="@+id/inputBulletType"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Select Bullet Type"
					android:orientation="horizontal"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:visibility="gone">
					<AutoCompleteTextView
					    android:id="@+id/txtAddBulletType"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:inputType="none"
					    android:textSize="16sp"
					    android:editable="false"/>
				</com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
			<com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/inputAddClassTokClass"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:hint="Class Name (required field)"
			    app:counterEnabled="true"
			    app:counterMaxLength="50"
			    android:layout_marginTop="5dp"
			    android:layout_marginBottom="5dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/linearClassTokType">
               <EditText
                   android:id="@+id/txtAddClassTokClass"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:textSize="16sp"
                   android:padding="10dp"
                   android:maxLength="25"
                   android:textColor="@android:color/black" 
                   android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>
			<com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/inputAddClassTokCategory"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:hint="Category (required field)"
			    app:counterEnabled="true"
			    app:counterMaxLength="50"
			    android:layout_marginTop="5dp"
			    android:layout_marginBottom="5dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/inputAddClassTokClass">
               <EditText
                   android:id="@+id/txtAddClassTokCategory"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:textSize="16sp"
                   android:padding="10dp"
                   android:maxLength="25"
                   android:textColor="@android:color/black" 
                   android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>
			
            <com.google.android.material.textfield.TextInputLayout
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
				android:id="@+id/inputLayoutClassTokPrimary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:hint="Title"
				app:hintEnabled="true"
				app:counterEnabled="true"
				app:counterMaxLength="300"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/inputAddClassTokCategory">
				<EditText
					android:id="@+id/txtAddClassTokPrimary"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:textStyle="normal"
					android:textSize="16sp"
					android:padding="10dp"
					android:maxLength="300"/>
			</com.google.android.material.textfield.TextInputLayout>
			  <LinearLayout
				android:id="@+id/linearMainImage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" 
				android:layout_marginTop="-20dp"
				android:padding="5dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/inputLayoutClassTokPrimary">
 				<TextView
					android:id="@+id/txtAddMainImage"
					android:drawableLeft="@drawable/image_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left|center"
					android:paddingBottom="10dp"
					android:text="Select an image."
					android:textSize="16sp"
					android:textColor="?attr/textColor"
					android:textAllCaps="false"
					android:clickable="true"
					android:background="?attr/selectableItemBackground"/>
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="100dp"
                    android:background="@drawable/linearboard_nopadding"
					android:id="@+id/addclasstok_imagebrowse"
					android:scaleType="fitCenter"/>
			</LinearLayout>
			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/colorSelectorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/linearMainImage">
                <Button
                    android:id="@+id/btnSelectColor"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Select Tile Color"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/txtColor"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
					 android:padding="10dp"
                    android:background="@color/WHITE"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@id/btnSelectColor"
                    app:layout_constraintTop_toTopOf="parent"/>
				<Button
					android:id="@+id/btnAddTileSticker"
				   android:layout_width="wrap_content"
                    android:layout_height="40dp"
					android:textAllCaps="false"
					android:text="+ Add Tile Sticker"
					android:onClick="OnAddTokSticker"
					android:textColor="@color/WHITE"
					android:backgroundTint="@color/limegreen"
					android:textStyle="normal"
					android:textSize="15sp"
                    android:padding="10dp"
					android:layout_marginEnd="15dp"
					app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/addclasstok_stickerimage"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
			<Button
				android:id="@+id/removeSticker"
                android:layout_width="24dp"
                android:layout_height="24dp"
				android:visibility="gone"
				 android:layout_marginLeft="15dp"
                android:layout_gravity="center"
				android:background="@drawable/closered_24px"
				 app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/LinearAddClassTokSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/colorSelectorLayout">
              <!--  <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Detail"
				    android:textSize="16sp"
				    android:textColor="@android:color/black"/>-->
				<com.google.android.material.textfield.TextInputLayout
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Detail"
					app:hintEnabled="true"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					app:counterEnabled="true"
					app:counterMaxLength="600">
					<EditText
						android:id="@+id/txtAddClassTokSecondary"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textStyle="normal"
						android:textSize="16sp"
						android:padding="10dp" 
						android:maxLength="600"/>
				</com.google.android.material.textfield.TextInputLayout>
				<com.google.android.flexbox.FlexboxLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"	
					android:layout_marginTop="-20dp"
					app:flexWrap="wrap"
					app:alignItems="flex_start"
					app:alignContent="flex_start"
					app:justifyContent="flex_start"
					app:layout_flexBasisPercent="100%">
					<Button
						android:id="@+id/btnPasteTokLink"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Paste Tok Link"
						android:textSize="16sp"
						android:textColor="@android:color/holo_blue_dark"
						android:textAllCaps="false"/>
					<Button
						style="@style/buttonRed"
						android:id="@+id/btnRemovePaste"
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:text="Remove Link"
						android:textSize="14sp"
						android:textColor="@color/WHITE"
						android:textAllCaps="false"
						android:paddingStart="10dp"
						android:paddingEnd="10dp"
						android:visibility="gone"
						tools:visibility="visible"/>
					<Button
						android:id="@+id/btnSearchForToks"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Search for Toks"
						android:textSize="16sp"
						android:textColor="@color/limegreen"
						android:textAllCaps="false"/>
				</com.google.android.flexbox.FlexboxLayout>

				<TextView
					android:id="@+id/txtSecondaryImage"
					android:drawableLeft="@drawable/image_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left|center"
					android:paddingBottom="10dp"
					android:text="Select a secondary image."
					android:textSize="16sp"
					android:textColor="?attr/textColor"
					android:textAllCaps="false"
					android:clickable="true"
					android:visibility="gone"
					android:background="?attr/selectableItemBackground"/>
				<ImageView
					android:id="@+id/imageViewSecondaryImage"
					android:layout_width="match_parent"
					android:layout_height="100dp"
                    android:background="@drawable/linearboard_nopadding" 
					android:scaleType="fitCenter"
					android:visibility="gone"
					tools:visibility="visible"/>
            </LinearLayout>

			<TextView
				android:id="@+id/txtTipLabelAddMore"
				android:layout_width="0dp"
				android:layout_height="60dp" 
				android:textColor="@color/WHITE"
				android:textSize="15sp"  
				android:text="Tip: To add more info, use additional toks"
				android:gravity="start|center"
				android:paddingStart="60dp"
				android:paddingTop="@dimen/padding_10"
				android:paddingBottom="10dp"
				android:paddingEnd="10dp"
				android:backgroundTint="@color/colorPrimaryDark"
				android:background="@drawable/rounded_button_main"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/LinearAddClassTokSecondary"/>

			<de.hdodenhof.circleimageview.CircleImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="10dp"
				android:src="@drawable/avatar3"
				app:civ_circle_background_color="@android:color/white"
				app:civ_border_width="3dp"
				app:civ_border_color="@color/lightBlue"
				app:layout_constraintStart_toStartOf="@id/txtTipLabelAddMore"
				app:layout_constraintTop_toTopOf="@id/txtTipLabelAddMore"
				app:layout_constraintBottom_toBottomOf="@id/txtTipLabelAddMore"
				app:shapeAppearanceOverlay="@style/CircleImageStyle"/>

			<include
				android:id="@+id/layoutMultipleToks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				layout="@layout/layout_add_classtok_multiple_toks"
				android:visibility="gone"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/txtTipLabelAddMore"/>

			<TextView
                android:id="@+id/txtShowHideAutoPaste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Auto Paste Fields"
                android:textSize="16sp"
                android:textColor="?attr/textColor"	
				android:textStyle="bold"
				android:drawableLeft="@drawable/baseline_arrow_downward_24"
				android:background="?android:attr/selectableItemBackground"
				android:layout_marginStart="2dp"
				app:layout_constraintStart_toStartOf="parent" 
				app:layout_constraintTop_toBottomOf="@id/layoutMultipleToks"/>

            <LinearLayout
                android:id="@+id/LinearAddClassTokDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/txtShowHideAutoPaste">
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:flexWrap="nowrap"
                    app:alignItems="flex_start"
                    app:alignContent="flex_start"
                    app:justifyContent="flex_start"
                    app:layout_flexBasisPercent="100%">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
						android:layout_marginTop="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tokstargirl1crop"
						 app:layout_flexBasisPercent="20%"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble_arrow_mid_left"
						android:backgroundTint="@color/BLACK"
                        android:textColor="@color/WHITE"
                        android:text="@string/detail_dialouge"
						android:padding="10dp"
						android:gravity="center"
						 app:layout_flexBasisPercent="50%"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnAutoPaste"
                        android:text="Autopaste"
                        android:backgroundTint="@color/limegreen"
                        android:textColor="@color/WHITE"
						app:layout_flexBasisPercent="30%"/>
                </com.google.android.flexbox.FlexboxLayout>
				<EditText
					android:id="@+id/txtAutoPaste"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textStyle="normal"
					android:textSize="16sp"
					android:padding="10dp"	  
					android:layout_marginBottom="10dp"
					android:layout_marginStart="10dp"
					android:layout_marginEnd="10dp"
					android:textColor="?attr/textColor"
					android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>

			<TextView
                android:id="@+id/hideShowAllSections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide All Sections"
                android:textSize="16sp"
                android:textColor="?attr/textColor"	
				android:textStyle="bold"
				android:layout_marginStart="2dp"
				android:visibility="gone"
				tools:visibility="visible"
				android:layout_marginTop="20dp"
				android:background="?android:attr/selectableItemBackground"
				android:drawableLeft="@drawable/baseline_arrow_upward_24"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/LinearAddClassTokDetail"/>

			<androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerAddClassTok"  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/hideShowAllSections"/>

			<LinearLayout
				android:id="@+id/linearToksGirlDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="10dp"
				android:visibility="gone"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toStartOf="@id/btnAddClassTokAddDetail"
				app:layout_constraintTop_toBottomOf="@id/RecyclerAddClassTok">
				<ImageView
					android:id="@+id/imageToksGirlDetail"
					android:layout_width="65dp"
					android:layout_height="65dp"
					android:src="@drawable/tokstargirl2"  
					android:scaleType="fitCenter"/>

				<ImageView
					android:id="@+id/imageToksGirlDetailTriangle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/triangle_layout"
					android:scaleX="-1"
					android:layout_marginTop="2dp"
					app:tint="@color/colorPrimaryDark"/>

				<TextView
					android:id="@+id/txtTokStartDetailLimit"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"	 
					android:gravity="start"
					android:paddingStart="25dp"
					android:paddingEnd="10dp"
					android:paddingBottom="10dp"
					android:paddingTop="10dp"  
					android:text="You can have up to 10 details. For more, create new tok."
					android:textSize="13sp"
					android:textColor="@color/WHITE"
					android:backgroundTint="@color/colorPrimaryDark"
					android:background="@drawable/rounded_button_main"/>
			</LinearLayout>

            <Button
			    android:id="@+id/btnAddClassTokAddDetail"
			    android:layout_width="150dp"
			    android:layout_height="40dp" 
			    android:layout_gravity="center"
			    android:layout_marginTop="10dp"
                android:backgroundTint="@color/limegreen"
			    android:background="@drawable/mybutton"
			    android:text="+ Add Detail"
				android:visibility="gone"
			    android:textAllCaps="false"
			    android:onClick="OnClickAddDetail"
			    android:textColor="@android:color/white"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/RecyclerAddClassTok"/>

			<Button
			    android:id="@+id/btnAddClassTokAddContent"
			    android:layout_width="150dp"
			    android:layout_height="40dp" 
			    android:layout_gravity="center"
			    android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/holo_blue_dark"
			    android:background="@drawable/mybutton"
			    android:text="+ Add Content"
			    android:textAllCaps="false"	
			    android:textColor="@android:color/white" 
				android:visibility="gone"
				tools:visibility="visible"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintBottom_toBottomOf="@id/RecyclerAddClassTok"/>
           
			<TextView
				android:id="@+id/txtTipNotes"
				android:layout_width="0dp"
				android:layout_height="60dp" 
				android:textColor="@color/WHITE"
				android:textSize="14sp"  
				android:text="Tip: To add more info, use the Notes field below or additional toks"
				android:gravity="start|center"	
				android:paddingStart="60dp"
				android:paddingTop="@dimen/padding_10"
				android:paddingBottom="10dp"
				android:paddingEnd="50dp"
				android:layout_marginTop="10dp"
				android:backgroundTint="@color/lightBlue"
				android:background="@drawable/rounded_button_main"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/linearToksGirlDetail"/>

			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/circleImageViewTipNote"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="10dp"
				android:src="@drawable/tokstargirl2"
				app:civ_circle_background_color="@android:color/white"
				app:civ_border_width="3dp"
				app:civ_border_color="@color/colorPrimaryDark"
				app:layout_constraintStart_toStartOf="@id/txtTipNotes"
				app:layout_constraintTop_toTopOf="@id/txtTipNotes"
				app:layout_constraintBottom_toBottomOf="@id/txtTipNotes"
				app:shapeAppearanceOverlay="@style/CircleImageStyle"/>

			<androidx.appcompat.widget.AppCompatImageButton
				android:id="@+id/btnCloseTipNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:background="?android:attr/selectableItemBackgroundBorderless"
				android:src="@drawable/close_24px"
				android:layout_margin="10dp"
				app:layout_constraintTop_toTopOf="@id/txtTipNotes"
				app:layout_constraintEnd_toEndOf="@id/txtTipNotes"
				app:layout_constraintBottom_toBottomOf="@id/txtTipNotes"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
				android:id="@+id/inputNotes"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:hint="Notes (2000 characters max)"
				app:counterEnabled="true"
				app:counterMaxLength="2000"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/txtTipNotes">
				<EditText
					android:id="@+id/txtAddClassTokNotes"
					android:layout_width="match_parent"
					android:layout_height="200dp"
					android:textStyle="normal"
					android:textSize="16sp"
					android:padding="10dp"
					android:gravity="top" 
					android:maxLength="2000"/>
			</com.google.android.material.textfield.TextInputLayout>
          
			<TextView
                android:id="@+id/hideShowOptionals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Optional Fields"
                android:textSize="16sp"
                android:textColor="?attr/textColor"	
				android:textStyle="bold"
				android:drawableLeft="@drawable/baseline_arrow_downward_24"
				android:background="?android:attr/selectableItemBackground"
				android:padding="5dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/inputNotes"/>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/constraintOptionalFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:orientation="vertical"	   
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/hideShowOptionals">
				 <com.google.android.material.textfield.TextInputLayout
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
					android:id="@+id/inputLayoutSourceNotes"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:hint="Source Notes"
					app:hintEnabled="true"
					app:counterEnabled="true"
					app:counterMaxLength="5000">
					<EditText
						android:id="@+id/txtSourceNotes"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textStyle="normal"
						android:textSize="16sp"
						android:padding="10dp"
						android:maxLength="5000"/>
				</com.google.android.material.textfield.TextInputLayout>
				<com.google.android.material.textfield.TextInputLayout
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
					android:id="@+id/inputLayoutUrl"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:hint="Source Url"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					app:hintEnabled="true"
					app:counterEnabled="true"
					app:counterMaxLength="50"
					app:layout_constraintTop_toBottomOf="@id/inputLayoutSourceNotes"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toStartOf="@id/imageBtnAttachment">
					<EditText
						android:id="@+id/txtSourceUrl"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textStyle="normal"
						android:textSize="16sp"
						android:padding="10dp"
						android:maxLength="50"/>
				</com.google.android.material.textfield.TextInputLayout>
				<androidx.appcompat.widget.AppCompatImageButton
					android:id="@+id/imageBtnAttachment"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
					android:visibility="gone"
					android:src="@drawable/file_attach_icon_2"
					android:scaleType="fitCenter"
					android:background="?android:attr/selectableItemBackgroundBorderless"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="@id/inputLayoutUrl"/>
			 </androidx.constraintlayout.widget.ConstraintLayout>

			<TextView
				android:id="@+id/txtPostCopyTo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Post a copy to:"
				android:gravity="start"
				android:padding="10dp"
				android:textStyle="bold"
				android:textSize="16sp"
				android:textColor="?attr/textColor"
				android:layout_marginTop="15dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/constraintOptionalFields"/>
            <LinearLayout
                android:id="@+id/linearPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/txtPostCopyTo">
                <CheckBox
                    android:id="@+id/chkGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="?attr/textColor"
                    android:buttonTint="@color/colorAccent"/>
                <TextView
                    android:id="@+id/txtChkGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group"
                    android:contentDescription="privacy"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="?attr/textColor"/>
                <CheckBox
                    android:id="@+id/chkPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="?attr/textColor"
                    android:buttonTint="@color/colorAccent"/>
                <TextView
                    android:id="@+id/txtChkPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public"
                    android:contentDescription="privacy"
                    android:gravity="center"
                    android:textSize="16sp"
					android:layout_marginEnd="10dp"
                    android:textColor="?attr/textColor"/>
				<CheckBox
					android:id="@+id/chkTokChannel"
					android:text="Tok Channels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					 android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="?attr/textColor"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.core.widget.NestedScrollView>

	<include
		android:id="@+id/includeHeaderLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		layout="@layout/toolbar_custom"/>

	<TextView
		android:id="@+id/classGroupName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="43dp"
		android:layout_marginLeft="30dp"
		android:text="Type"
		android:visibility="gone"
		android:textSize="16sp"
		android:textColor="?attr/textColor"/>

	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:visibility="gone"
		tools:visibility="visible">
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:padding="2dp"
			android:layout_gravity="bottom">
			<Button
				android:id="@+id/btnPreviewTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:text="Preview Tile"
				android:textSize="16sp"
				android:textColor="@color/WHITE"
				android:textAllCaps="false"
				android:backgroundTint="@color/colorAccent"/>
		</LinearLayout>
	</FrameLayout>

    <!--Progress-->
	<LinearLayout
		android:id="@+id/LinearProgress_addclasstok"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center"
		android:visibility="gone"
		android:background="#80000000">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/padding_10"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout">
			<TextView
				android:id="@+id/progressBarTextAddClassTok"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Loading..."
				android:textSize="16sp"
				android:textColor="@android:color/white"
				android:gravity="center"
				android:layout_gravity="center"/>
			<ProgressBar
				android:id="@+id/progressbarAddClassTok"
				style="@style/Widget.AppCompat.ProgressBar"
				android:layout_height="86dp"
				android:layout_width="86dp"
				android:layout_gravity="center"
				android:indeterminate="true"/>
		</LinearLayout>
	</LinearLayout>

    <LinearLayout
        android:id="@+id/LinearToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:visibility="gone"
        app:layout_anchorGravity="top|center"
        app:layout_anchor="@+id/linearPrivacy">
        <TextView
            android:id="@+id/TextToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout"
            android:padding="10dp"
            android:textSize="16sp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>