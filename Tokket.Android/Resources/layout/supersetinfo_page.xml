<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >
  <include
        android:id="@+id/includeHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        layout="@layout/header_layout"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        android:layout_below="@id/includeHeaderLayout"
        android:id="@+id/img_superset" 
        />
    <LinearLayout
        android:id="@+id/linearSetInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/img_superset"
        android:layout_alignLeft="@id/img_superset"
        android:layout_alignRight="@id/img_superset">
        <TextView
            android:id="@+id/lblSuperSetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="Super Set Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Sets"/>
        <TextView
            android:id="@+id/lblTotalSetsCount"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"   
        android:gravity="center"
        android:id="@+id/flexButtons"
        android:padding="10dp"
         android:layout_below="@id/linearSetInfo"
        android:layout_centerInParent="true"
           android:layout_alignLeft="@id/includeHeaderLayout"
        android:layout_alignRight="@id/includeHeaderLayout"
        >
        <Button
            android:id="@+id/btn_addtosuperset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@color/WHITE"
            android:textAllCaps="false"
            android:textSize="13dp"
            android:text="+ Add Sets to Super Set"
                               />
         <Button
            android:id="@+id/btn_removefromSuperset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@color/WHITE"
            android:textAllCaps="false"
              android:textSize="12dp"
            android:text="- Remove Sets from Super Set"
                               />
    </LinearLayout>
    <View
        android:id="@+id/layoutSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/flexButtons"/>
    <LinearLayout
        android:layout_below="@id/layoutSeparator"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabMySets"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@android:color/black"
            app:tabTextAppearance="@style/MyCustomTabText13"/>
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpagerMySets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>