<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/includeHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        style="@style/buttonRed"
        android:id="@+id/btnRemoveTokPak"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="-Remove Tok Pak"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/WHITE"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/includeHeaderLayout"
        app:layout_constraintBottom_toBottomOf="@id/includeHeaderLayout"/>

    <TextView
        style="@style/buttonRed"
        android:id="@+id/btnDeleteTokPak"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Delete"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/WHITE"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/btnCancelDelete"
        app:layout_constraintTop_toTopOf="@id/includeHeaderLayout"
        app:layout_constraintBottom_toBottomOf="@id/includeHeaderLayout"/>

    <TextView
        style="@style/buttonGrey"
        android:id="@+id/btnCancelDelete"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/WHITE"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/includeHeaderLayout"
        app:layout_constraintBottom_toBottomOf="@id/includeHeaderLayout"/>

    <FrameLayout         
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeHeaderLayout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.flexbox.FlexboxLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:flexWrap="wrap"
                app:alignItems="flex_start"
                app:alignContent="flex_start"
                app:justifyContent="flex_start"
                app:layout_flexBasisPercent="100%">
                <Button
                    android:id="@+id/btnMyToks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textSize="16sp"
                    android:textColor="@color/WHITE"
                    android:backgroundTint="#00b0f0"
                    android:textAllCaps="false"
                    app:layout_flexBasisPercent="50%"/>
                <Button
                    android:id="@+id/btnPresentation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presentation"
                    android:textSize="16sp"
                    android:textColor="@color/WHITE"
                    android:backgroundTint="#f711ec"
                    android:textAllCaps="false"
                    app:layout_flexBasisPercent="50%"/>
                <Button
                    android:id="@+id/btnPapers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Papers"
                    android:textSize="16sp"
                    android:textColor="@color/WHITE"
                    android:backgroundTint="#4472c4"
                    android:textAllCaps="false"
                    app:layout_flexBasisPercent="50%"/>
                <Button
                    android:id="@+id/btnPracticeTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Practice Test"
                    android:textSize="16sp"
                    android:textColor="@color/WHITE"
                    android:backgroundTint="#ffc000"
                    android:textAllCaps="false"
                    app:layout_flexBasisPercent="50%"/>
            </com.google.android.flexbox.FlexboxLayout>

                <RelativeLayout
          
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
				    >
                 <LinearLayout
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:id="@+id/limitStar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tokstar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/crc_guy1"/>
                <TextView
                    android:text="There are no additional tok paks!"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/WHITE"
                    android:background="@color/red_500"/>
            </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:layout_above="@id/limitStar"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/padding_10"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView
                android:id="@+id/txtProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/progressBarCircle"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
