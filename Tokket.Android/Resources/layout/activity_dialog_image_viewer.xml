<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearImageView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtImageViewDateLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date - Location"
        android:textColor="@color/DIM_GREY"
        android:padding="@dimen/padding_10"
        android:layout_marginStart="@dimen/padding_10"
        android:visibility="gone"
        tools:visibility="visible"/>
    <RelativeLayout
        android:id="@+id/relateiveBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black">
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/ImgImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/lblImageViewerMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:text="â‹®"
            android:textColor="@color/WHITE"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="@dimen/padding_10"
            android:visibility="gone"
            tools:visibility="visible"/>
        <Button
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="x"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:onClick="OnClickCloseImgView"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/red_500"/>

        <!--Progress-->
	    <LinearLayout
		    android:id="@+id/LinearProgress"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
            android:visibility="gone"
		    android:background="#80000000">
		    <LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:backgroundTint="#90000000"
                android:background="@drawable/tileview_layout">
                <TextView
                    android:id="@+id/TextProgressStatus"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Loading..."
				    android:textSize="16sp"
				    android:textColor="@android:color/white"
				    android:gravity="center"
				    android:layout_gravity="center"/>
			    <ProgressBar
				    style="@style/Widget.AppCompat.ProgressBar"
				    android:layout_height="86dp"
				    android:layout_width="86dp"
				    android:layout_gravity="center"
				    android:indeterminate="true"/>
		    </LinearLayout>
	    </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/txtImageViewCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:textColor="@color/DIM_GREY"
        android:padding="@dimen/padding_10"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>
