<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/NestedTokInfoComment"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_alignParentBottom="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="?attr/bgColor">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="#c0c0c0"/>
                <com.google.android.flexbox.FlexboxLayout
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"
		            android:layout_gravity="center_horizontal|bottom"
		            app:flexWrap="nowrap"
                    app:alignItems="center"
                    app:alignContent="center"
                    app:justifyContent="center">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgcomment_userphoto"
			            android:layout_width="wrap_content"
			            android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        app:layout_flexBasisPercent="13%"
                        app:layout_alignSelf="flex_start"
                        tools:src="@drawable/avatar2"/>
                    <com.google.android.flexbox.FlexboxLayout
		                android:layout_height="wrap_content"
		                android:layout_width="match_parent"
		                app:flexWrap="nowrap"
                        app:alignItems="center"
                        app:alignContent="center"
                        app:justifyContent="center"
                        app:layout_flexBasisPercent="78%"
                        android:background="@drawable/linearboard_nopadding">
                        <EditText
			                android:id="@+id/tokinfo_txtComment"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:textStyle="normal"
			                android:textSize="14sp"
			                android:padding="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
			                android:hint="Add a public comment..."
                            android:contentDescription="comment_editor"
			                android:gravity="top"
			                android:maxLength="2000"
			                android:textColor="?attr/textColor"
			                android:background="@drawable/linearboard_nopadding"
                            android:backgroundTint="?attr/bgColor"
                            app:layout_flexBasisPercent="88%"/>
                    </com.google.android.flexbox.FlexboxLayout>
                    <ImageButton
                        android:id="@+id/btnAttach"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tag="0"
                        android:layout_gravity="center"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="comment"
                        android:tint="?attr/textColor"
                        android:src="@drawable/file_attach_icon_2"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="10dp"
                        app:layout_flexBasisPercent="11%"
                        app:layout_alignSelf="baseline"/>
                    <ImageButton
                        android:id="@+id/btnSend"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tag="0"                                                              
                        android:layout_gravity="center"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="comment"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/send_black_24"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="10dp"
                        app:layout_flexBasisPercent="11%"
                        app:layout_alignSelf="baseline"/>
	            </com.google.android.flexbox.FlexboxLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fileRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#c0c0c0"/>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

