<androidx.coordinatorlayout.widget.CoordinatorLayout 
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:paddingStart="@dimen/padding_10"
   android:paddingEnd="@dimen/padding_10"
   android:paddingTop="3dp"
   android:paddingBottom="3dp">
    <!--Tok Image-->
    <GridLayout
        android:id="@+id/gridTokImage"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_column="0"                                                   
        android:layout_row="0"
        android:rowCount="6"
        android:numColumns="3">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/lbl_Imgnameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/lbl_royaltitleImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/abc_text_size_small_material"/>
              <!--  <ImageView
                    android:id="@+id/imgtile_stickerimageImg"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"/>-->
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal|fill_horizontal"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    app:cardCornerRadius="24dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    android:layout_gravity="left">
                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:id="@+id/imageTokImgUserPhoto"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scaleType="fitXY"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        <!--    <ImageView
                android:layout_width="62dp"
                android:layout_height="50dp"
                android:id="@+id/img_tokimgFlag"
                android:scaleType="fitXY"
                android:layout_gravity="right"/>-->
        </FrameLayout>
       <!-- <TextView
            android:id="@+id/txtLinkImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="@dimen/padding_10"
            android:text="link"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="end"
            android:clickable="true"
            android:layout_row="1"
            android:layout_column="0"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>-->
        <TextView
            android:id="@+id/lbl_tokimgprimarytext"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textColor="@android:color/black"
            android:text="Title"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="@dimen/abc_text_size_medium_material"/>
         <TextView
            android:id="@+id/lbl_tokimgsecondarytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:text="Quote: Secondary Text"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="13dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/imgTokImgMain"
            android:scaleType="fitCenter"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"/>
       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2">
            <TextView
                android:id="@+id/lblTokImgType"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="wrap_content"
                android:text="BOTTOM"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="start|bottom"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:id="@+id/toktile_imgpurplegemtokimg"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/purple_gem"
                android:scaleType="fitEnd"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/lblTokImgCategory"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="wrap_content"
                android:text="BOTTOM"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="right|top"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </GridLayout>
    <!--Toks 2-->
    <GridLayout
        android:id="@+id/gridBackground"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_column="0"
        android:layout_row="0"
        android:rowCount="4"
        android:numColumns="3">
        <!--Row 1-->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:gravity="left"
            android:layout_marginLeft="54dp"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/lbl_royaltitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@android:color/white"/>
            
            <ImageView
                android:id="@+id/imgtile_stickerimage"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"/>

             <TextView
                android:id="@+id/lbl_englishPrimaryFieldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:maxLength="35"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_row="0"
            android:layout_column="0"
            app:cardCornerRadius="24dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:clickable="true"
            android:thicknessRatio="1.9">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:id="@+id/imageUserPhoto"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="62dp"
            android:layout_height="50dp"
            android:id="@+id/imageFlag"
            android:layout_row="0"
            android:layout_column="2"
            android:scaleType="fitXY"/>
          <TextView
                android:id="@+id/lblCategory"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="wrap_content"
                android:text="BOTTOM"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="right"
                android:textSize="10sp"
                android:textStyle="bold"
             android:layout_row="0"
            android:layout_column="2"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"/>
        <!--Row 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

        <!--    <TextView
                android:id="@+id/txtLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="link"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="end"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>-->
            <TextView
                android:id="@+id/lbl_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/secondarytext_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@android:color/white"/>
           
            <TextView
                android:id="@+id/lblTokViewMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sample"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
             
        </LinearLayout>
        <!--Row 2-->
        
        <RelativeLayout
            android:id="@+id/CommentSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
           <View
            android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="left|center"
                app:layout_flexBasisPercent="100%">
                <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:cardCornerRadius="24dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:clickable="true"
                    android:thicknessRatio="1.9">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:id="@+id/imageTokImgFirstCommentUserPhoto"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="OnClickTokInfoCommenter"
                        android:focusableInTouchMode="true"
                        android:scaleType="fitXY"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/lbl_commentnameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="left|start"
                    android:textSize="12sp"
                    android:textStyle="bold"    
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/lbl_commentdate"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="left|start"
                    android:layout_marginLeft="15dp"
                    android:textSize="10sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
          
            <TextView
                android:id="@+id/lblfirstcomment"
                android:layout_width="250dp"
                android:maxWidth="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="19dp"
                android:text="BOTTOM"
                android:maxLines="1"
                android:textAlignment="textStart"
                android:ellipsize="start"
                android:gravity="end"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:textColor="@android:color/black"
                />
      
          <!--  <ImageView
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:adjustViewBounds="true"
                android:id="@+id/toktile_imgpurplegem"
                android:src="@drawable/purple_gem"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>-->
         
        </RelativeLayout>
    </GridLayout> 

