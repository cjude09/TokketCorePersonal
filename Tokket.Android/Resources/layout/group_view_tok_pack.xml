<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingStart="@dimen/padding_10"
	android:paddingEnd="@dimen/padding_10">
	<LinearLayout 
		android:id="@+id/linearPages"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<com.google.android.flexbox.FlexboxLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			app:flexWrap="nowrap"
			app:alignItems="flex_start"
			app:alignContent="flex_start"
			app:justifyContent="flex_start"
			app:layout_flexBasisPercent="100%">
			<Button
				android:id="@id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:text="All"
				android:textSize="10sp"
				android:textColor="@color/WHITE"
				android:backgroundTint="@color/forestgreen"
				android:textAllCaps="false"
				app:layout_flexBasisPercent="50%"/>
			<Button
				android:id="@+id/btnPresentation"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Presentation"
				android:textSize="10sp"
				android:textColor="@color/WHITE"
				android:backgroundTint="#f711ec"
				android:textAllCaps="false"
				app:layout_flexBasisPercent="50%"/>
			<Button
				android:id="@+id/btnPapers"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Papers"
				android:textSize="10sp"
				android:textColor="@color/WHITE"
				android:backgroundTint="#4472c4"
				android:textAllCaps="false"
				app:layout_flexBasisPercent="50%"/>
			<Button
				android:id="@+id/btnPracticeTest"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Practice Test"
				android:textSize="10sp"
				android:textColor="@color/WHITE"
				android:backgroundTint="#ffc000"
				android:textAllCaps="false"
				app:layout_flexBasisPercent="50%"/>
		</com.google.android.flexbox.FlexboxLayout>

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recyclerPages"  
			android:layout_width="match_parent"  
			android:layout_height="wrap_content"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
	</LinearLayout>
	   <LinearLayout
            android:id="@+id/linearNoTokPak"
            android:orientation="vertical"
			android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/padding_10"
            android:textSize="15sp"
			
            android:text="There are no Tok Paks. Click the button to add Tok Pak"/>
            <Button
			android:id="@+id/addtokpakgroup"
                android:text="Add Tok Paks"
                android:textColor="@color/WHITE"
                android:background="@color/limegreen"
              android:textAlignment="center"
                android:drawableRight="@drawable/addtokicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
	<LinearLayout
		android:id="@+id/linearProgress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_gravity="center"
		android:padding="@dimen/padding_10"
		android:backgroundTint="#80000000"
		android:background="@drawable/tileview_layout"
		android:visibility="gone"
		tools:visibility="visible">
		<TextView
			android:id="@+id/txtProgress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Loading..."
			android:textSize="16sp"
			android:textColor="@android:color/white"
			android:gravity="center"
			android:layout_gravity="center"/>
		<ProgressBar
			android:id="@+id/progressBarCircle"
			style="@style/Widget.AppCompat.ProgressBar"
			android:layout_height="86dp"
			android:layout_width="86dp"
			android:layout_gravity="center"
			android:indeterminate="true"/>
	</LinearLayout>
</FrameLayout>
