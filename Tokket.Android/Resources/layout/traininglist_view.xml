<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
       android:id="@+id/linearDelete"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="10dp"
       android:layout_marginStart="5dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent">
       <TextView
            style="@style/buttonRed"
            android:id="@+id/btnRemoveOpportunity"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="-Remove"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/WHITE"
            android:layout_marginEnd="5dp"/>

        <TextView
            style="@style/buttonRed"
            android:id="@+id/btnDelete"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Delete"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/WHITE"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginEnd="5dp"/>

        <TextView
            style="@style/buttonGrey"
            android:id="@+id/btnCancelDelete"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/WHITE"
            android:visibility="gone"
            tools:visibility="visible"/>
   </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/FlexHeaderButtons"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:flexWrap="nowrap"
        app:alignItems="flex_start"
        app:alignContent="flex_start"
        app:justifyContent="flex_start"
        app:layout_flexBasisPercent="100%"
        app:layout_constraintTop_toBottomOf="@id/linearDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/btnAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textSize="12sp"
            android:textColor="@color/WHITE"
            android:backgroundTint="#00b0f0"
            android:textAllCaps="false"
            app:layout_flexBasisPercent="50%"
            />
        <Button
            android:id="@+id/btnCourses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses"
            android:textSize="12sp"
            android:textColor="@color/WHITE"
            android:backgroundTint="#4472c4"
            android:textAllCaps="false"
            app:layout_flexBasisPercent="50%"/>
        <Button
            android:id="@+id/btnPrograms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programs"
            android:textSize="12sp"
            android:textColor="@color/WHITE"
            android:backgroundTint="#f711ec"
            android:textAllCaps="false"
            app:layout_flexBasisPercent="50%"/>
        <Button
            android:id="@+id/btnTutors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutors"
            android:textSize="12sp"
            android:textColor="@color/WHITE"
            android:backgroundTint="#ffc000"
            android:textAllCaps="false"
            app:layout_flexBasisPercent="50%"/>
    </com.google.android.flexbox.FlexboxLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
		app:layout_constraintTop_toTopOf="@id/FlexHeaderButtons"
        app:layout_constraintBottom_toTopOf="@id/bottomProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:id="@+id/limitStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tokstar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crc_guy1"/>
            <TextView
                android:text="There are no additional groups!"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/WHITE"
                android:background="@color/red_500"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_above="@id/limitStar"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">   
            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/WHITE"
                app:layout_constraintTop_toTopOf="parent">
                <!-- Adding 5 rows of placeholders -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="center">
                    <include layout="@layout/toks_placeholder_item" />
                    <include layout="@layout/toks_placeholder_item" />
                    <include layout="@layout/toks_placeholder_item" />
                    <include layout="@layout/toks_placeholder_item" />
                    <include layout="@layout/toks_placeholder_item" />
                 </LinearLayout>
            </io.supercharge.shimmerlayout.ShimmerLayout>
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"      
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerTrainingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="?android:attr/actionBarSize"
                    android:scrollbarStyle="outsideOverlay"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:divider="@android:color/transparent"/>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/bottomProgress"
        android:theme="@style/CircularProgressBlue"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_marginBottom="30dp"
        android:layout_height="26dp"
        android:layout_width="26dp"
        android:visibility="gone"  
        android:indeterminate="true"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/TextNothingFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/FlexHeaderButtons"
        app:layout_constraintBottom_toTopOf="@id/bottomProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_addTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/white_plus_icon"
        android:clickable="true"
        android:backgroundTint="@color/colorAccent"
        android:scaleType="fitXY"
        app:borderWidth="0dp"
        app:useCompatPadding="true"
        app:layout_behavior="@string/fab_scroll_translation_autohide_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/linearProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"   
        android:padding="@dimen/padding_10"
        android:backgroundTint="#80000000"
        android:background="@drawable/tileview_layout"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FlexHeaderButtons">
        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center"/>
        <ProgressBar
            android:id="@+id/progressBarCircle"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_height="86dp"
            android:layout_width="86dp"
            android:layout_gravity="center"
            android:indeterminate="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
