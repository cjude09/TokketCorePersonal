<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:padding="@dimen/padding_10"
	android:background="@drawable/rounded_edittext_white_bg">
	<GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
			   <LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:padding="@dimen/padding_10"
	android:background="@drawable/rounded_edittext_white_bg">
	<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentEnd="true">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:layout_alignParentStart="true"
			android:gravity="start|center"
			android:text="Add Schedule / Reminders"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>
		<Button
			android:id="@+id/btnClose"
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:text="X"
			android:textStyle="bold"
			android:textSize="16sp"
			android:textAllCaps="false"
			android:textColor="@color/WHITE"
			android:backgroundTint="@color/red_500"
			android:padding="@dimen/padding_10"/>
	</RelativeLayout>
            <LinearLayout
				android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
				<ImageView
					android:src="@drawable/tokstargirl1"
                    android:layout_width="50dp"
					android:scaleType="fitCenter"
                    android:layout_height="50dp"/>
				<TextView
					android:background="@android:color/holo_blue_light"
					android:textColor="@color/WHITE"
					android:text="Just grab and drag to resequence a rectangle item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_marginTop="5dp"
					android:padding="5dp"/>
            </LinearLayout>
<!--    <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Type"
		android:textSize="16sp"
		android:textColor="@android:color/black"/>-->
    <Spinner
		android:id="@+id/spinnerType"
        style="@style/spinner_style"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:textStyle="normal"
		android:spinnerMode="dropdown"
		android:textSize="16sp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:textColor="@android:color/black"/>
	<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSchedule"  
        android:layout_width="match_parent"  
        android:layout_height="400dp"
		android:padding="@dimen/padding_10"
		android:background="@color/placeholder_bg"
        android:scrollbars="horizontal"
        android:layout_marginBottom="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
	<Button
		android:id="@+id/btnUpdate"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:text="Update"
		android:textSize="16sp"
		android:textAllCaps="false"
		android:textColor="@color/WHITE"
		android:backgroundTint="@color/colorAccent"
		android:padding="@dimen/padding_10"/>
		</LinearLayout>
						
   </GridLayout>
			   <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:translationY="@dimen/navigation_drawer_width"
		>
		<LinearLayout
			android:id="@+id/linearProgress_dialogue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center"
			android:padding="@dimen/padding_10"
			android:backgroundTint="#80000000"
			android:background="@drawable/tileview_layout"
			android:visibility="gone"
			tools:visibility="visible">
			<TextView
				android:id="@+id/txtProgress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Updating..."
				android:textSize="16sp"
				android:textColor="@android:color/white"
				android:gravity="center"
				android:layout_gravity="center"/>
			<ProgressBar
				android:id="@+id/progressBarCircle"
				style="@style/Widget.AppCompat.ProgressBar"
				android:layout_height="86dp"
				android:layout_width="86dp"
				android:layout_gravity="center"
				android:indeterminate="true"/>
		</LinearLayout>
	</FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
