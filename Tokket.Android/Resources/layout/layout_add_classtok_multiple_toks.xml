<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/editTextMultipleToks"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:padding="10dp"
        android:gravity="start"
        android:layout_marginEnd="5dp"
        android:background="@drawable/linearboard_nopadding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddMultipleToks"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/btnAddMultipleToks"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Add Multiple Toks"
        android:textSize="15sp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/editTextSeparator"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="Separator"
        android:gravity="start"
        android:padding="10dp"         
        android:layout_marginStart="5dp"
        android:background="@drawable/linearboard_nopadding"
        app:layout_constraintTop_toBottomOf="@id/btnAddMultipleToks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editTextMultipleToks"/>
</androidx.constraintlayout.widget.ConstraintLayout>
