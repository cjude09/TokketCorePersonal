<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnAddTok_deletedtlField1"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:tag="0"
        android:padding="10dp"
        android:onClick="OnDelete"
        android:background="@android:drawable/ic_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/subcheckbox"
        app:layout_constraintBottom_toBottomOf="@id/subcheckbox"/>
    <TextView
        android:id="@+id/lblAddTokImageStr"
        android:layout_width="0dp"
        android:layout_weight="1.50"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text=""
        android:gravity="left"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/btnAddTok_deletedtlField1"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/lblAddTokDetailEng1"
        android:layout_width="0dp"
        android:layout_weight="1.75"
        android:layout_height="wrap_content"
        android:text="English Translation"
        android:gravity="left"
        android:visibility="gone"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/lblAddTokImageStr"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/btnDeltokdtl_img"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:onClick="OnDeleteImageDtl"
        android:background="@android:drawable/ic_delete"
        app:layout_constraintEnd_toStartOf="@id/DetailImageView"
        app:layout_constraintTop_toTopOf="@id/DetailImageView"
        app:layout_constraintBottom_toBottomOf="@id/DetailImageView"/>
    <LinearLayout
        android:id="@+id/DetailImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" 
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAddTok_deletedtlField1">
        <ImageView
            android:id="@+id/detailpic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:contentDescription="description" />
        <CheckBox 
            android:id="@+id/chk_includeImage"
            android:text="Include Image on Tok Paks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/inputAddTokDetailField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="600"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddtokdtl_img"
        app:layout_constraintTop_toBottomOf="@id/DetailImageView">
        <EditText
            android:id="@+id/txtAddTokDetailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:padding="10dp"
            android:tag="0"
            android:maxLength="600"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/btnAddtokdtl_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:scaleType="fitXY"   
        android:gravity="center"
        android:onClick="OnClickAddTokImgDetail"
        android:background="@drawable/add_image_icon"
        app:layout_constraintTop_toTopOf="@id/inputAddTokDetailField"
        app:layout_constraintBottom_toBottomOf="@id/inputAddTokDetailField"
        app:layout_constraintEnd_toStartOf="@id/chkAddTokChkDtlField"/>
    <ImageView
        android:id="@+id/btnAddTokDetailSmiley"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:contentDescription="detail"
        android:visibility="gone"
        android:src="@drawable/TOKKET_smiley_1B"
        android:background="?attr/selectableItemBackground"/>
    <CheckBox
        android:id="@+id/chkAddTokChkDtlField"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:buttonTint="@color/colorAccent" 
        android:textSize="13sp"
        android:onClick="OnCheckAddTok"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/inputAddTokDetailField"
        app:layout_constraintBottom_toBottomOf="@id/inputAddTokDetailField"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlayoutDetailEnglishTrans"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="10"
        app:hintEnabled="false"
        android:visibility="gone"
        app:counterEnabled="true"
        app:counterMaxLength="500"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/inputAddTokDetailField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/inputAddTokDetailField">
        <EditText
            android:id="@+id/txtAddTokDetailFieldEngTrans"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="normal"
            android:textSize="13sp"
            android:padding="10dp"
            android:tag="0"
            android:maxLength="500"
            android:textColor = "@android:color/black"
            android:background="@drawable/rounded_edittext_white_bg"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexPaste"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:alignContent="flex_start"
        app:justifyContent="flex_start"
        app:layout_flexBasisPercent="100%"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputlayoutDetailEnglishTrans">
		<Button
            style="@style/buttonWhite"
			android:id="@+id/btnPasteTokLink"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
			android:text="Paste Tok Link"
			android:textSize="14sp"
			android:textColor="@android:color/holo_blue_dark"
			android:textAllCaps="false"
            android:padding="5dp"/>
        <Button
            style="@style/buttonRed"
			android:id="@+id/btnRemovePaste"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:text="Remove Link"
			android:textSize="14sp"
			android:textColor="@color/WHITE"
			android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
			android:visibility="gone"
			tools:visibility="visible"/>
		<Button
            style="@style/buttonWhite"
			android:id="@+id/btnSearchForToks"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
			android:text="Search for Toks"
			android:textSize="14sp"
			android:textColor="@android:color/holo_blue_dark"
			android:textAllCaps="false"
            android:padding="5dp"/>
        <CheckBox android:id="@+id/subcheckbox"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:button="@android:color/transparent"
            android:text="Convert as Sub-bullet"
            android:textSize="14sp"
            android:textColor="@color/WHITE"
            android:padding="5dp"
            android:background="@drawable/rounded_button_main"/>
	</com.google.android.flexbox.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>