<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerClassGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <include
        layout="@layout/layout_chat_box"
        android:id="@+id/layoutChatBox"
        android:visibility="gone"
        tools:visibility="visible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom">
        <Button
            android:id="@+id/btnAddExistingClassTok"
            style="@style/buttonGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Existing Class Tok"
            android:padding="@dimen/padding_10"
            app:layout_constraintEnd_toStartOf="@id/fab_AddClassGrouppage"
            app:layout_constraintBottom_toBottomOf="@id/fab_AddClassGrouppage"
            app:layout_constraintTop_toTopOf="@id/fab_AddClassGrouppage"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_AddClassGrouppage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:padding="15dp"
            android:src="@drawable/white_plus_icon" 
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            android:scaleType="fitXY"
            app:borderWidth="0dp"
            app:useCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_behavior="@string/fab_scroll_translation_autohide_behavior"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@android:color/white"
            android:fitsSystemWindows="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="?attr/actionBarSize"
                android:background="?attr/bgColor"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/padding_10"
                    android:gravity="center_horizontal">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/placeholder_bg"/>
                    <Button
                        android:id="@+id/btnShowGroupInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_gravity="center_vertical"
                        android:text="Group Info"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="?attr/textColor"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/placeholder_bg"/>
                    <Button
                        android:id="@+id/btnShowSchedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_gravity="center_vertical"
                        android:text="Schedule"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="?attr/textColor"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/placeholder_bg"/>
                    <Button
                        android:id="@+id/btnShowNotif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Reminders"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="?attr/textColor"
                        android:background="?android:attr/selectableItemBackgroundBorderless"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/placeholder_bg"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtScheduleNotif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_10"
                    android:textSize="16sp"
                    android:textColor="?attr/textColor"/>
                <LinearLayout
                    android:id="@+id/GroupInfoLinear"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtGroupName"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:textColor="@color/WHITE"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <ImageView
                        android:clickable="true"
                        android:layout_height="200dp"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/ImgGroup"
                        android:contentDescription="description" />
                    <LinearLayout
                        android:id="@+id/LinearRequestSent"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/TextCheckRequestSent"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="check-circle"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@android:color/holo_green_dark"/>
                        <TextView
                            android:id="@+id/TextRequestStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Request Sent"
                            android:gravity="center"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/placeholder_bg"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
						<TextView
                            android:id="@+id/tvNameLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: "
                            android:textSize="16sp"
                            android:textColor="?attr/textColor"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/TextName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="16sp"
                            android:textColor="?attr/textColor"
                            android:textStyle="bold"
                            android:gravity="start|center"
                            app:layout_constraintStart_toEndOf="@id/tvNameLabel"
                            app:layout_constraintTop_toTopOf="@id/tvNameLabel"
                            app:layout_constraintEnd_toEndOf="parent"/>
						<TextView
                            android:id="@+id/tvSchoolLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="School: "
                            android:textSize="14sp"
                            android:textColor="?attr/textColor"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvNameLabel"/>
                        <TextView
                            android:id="@+id/TextSchool"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="School"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor"
                            android:gravity="start|center"
							app:layout_constraintStart_toEndOf="@id/tvSchoolLabel"
                            app:layout_constraintTop_toTopOf="@id/tvSchoolLabel"
                            app:layout_constraintEnd_toEndOf="parent"/>
						<TextView
                            android:id="@+id/tvDescriptionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description: "
                            android:textSize="14sp"
                            android:textColor="?attr/textColor"
							app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvSchoolLabel"/>
                        <TextView
                            android:id="@+id/TextDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor"
                            android:gravity="start|center"
							app:layout_constraintStart_toEndOf="@id/tvDescriptionLabel"
                            app:layout_constraintTop_toTopOf="@id/tvDescriptionLabel"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/placeholder_bg"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imageBtnPreviousTab"
                style="@style/buttonMain"
                android:layout_width="100dp"
                android:layout_height="50dp"              
                android:padding="@dimen/padding_10"
                android:src="@drawable/white_arrow_left"
                android:scaleType="fitCenter"   
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageButton
                android:id="@+id/imageBtnNextTab"
                style="@style/buttonMain"
                android:layout_width="100dp"
                android:layout_height="50dp"              
                android:padding="@dimen/padding_10"
                android:src="@drawable/white_arrow_right"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/WHITE"
                app:tabGravity="fill"
                app:tabInlineLabel="true"
                app:tabMode="scrollable"
                app:tabBackground="@drawable/customtabdesign_1"
                app:tabIndicator="@android:color/black"
                app:tabIndicatorHeight="2dp"
                app:tabSelectedTextColor="@color/WHITE"
                app:tabTextColor="@android:color/black"
                app:tabTextAppearance="@style/MyCustomTabText14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageBtnPreviousTab"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/includeHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_layout"/>

    <!--Progress-->
    <LinearLayout
        android:id="@+id/LinearProgress_ClassGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="#80000000">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:backgroundTint="#90000000"
            android:background="@drawable/tileview_layout">
            <TextView
                android:id="@+id/TextProgressStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>