<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView				   
			android:layout_width="0dp"	 
			android:layout_height="wrap_content"
			android:background="@color/colorAccent"
			android:gravity="center"
			android:textSize="18sp"
			android:textStyle="bold"   
			android:textColor="@color/WHITE"
			android:padding="@dimen/padding_10"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>
		<TextView
			android:id="@+id/btnCancel"
			android:layout_width="wrap_content"	
			android:layout_height="40dp"
			android:gravity="center_horizontal|center_vertical"
			android:textSize="18sp"
			android:textStyle="bold"
			android:text="Cancel"
			android:layout_marginStart="10dp"
			android:background="?attr/selectableItemBackground"
			android:clickable="true"
			android:textColor="@android:color/white"
			app:layout_constraintStart_toStartOf="parent"/>
	
		<Button
			android:id="@+id/btnContinue"
			android:background="?attr/selectableItemBackground"
			android:layout_width="wrap_content"	
			android:layout_height="40dp"
			android:text="Continue"
			android:textAllCaps="false"
			android:layout_gravity="right"
			android:gravity="center" 
			android:layout_marginEnd="10dp"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="@android:color/white"
			app:layout_constraintEnd_toEndOf="parent"/>

		<TextView
			android:id="@+id/txtTitle"
			android:layout_width="match_parent"	
			android:layout_height="wrap_content"
			android:background="@color/WHITE"
			android:gravity="center"
			android:textSize="18sp"
			android:textStyle="bold"
			android:text="Create Game Set"	
			android:textColor="@color/DIM_GREY"
			android:padding="@dimen/padding_10"
			app:layout_constraintTop_toBottomOf="@id/btnCancel"/>

		<ImageButton
			android:id="@+id/btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
			android:src="@drawable/white_arrow_left"
			android:enabled="false"
			android:scaleType="fitCenter"
			android:adjustViewBounds="true"
			android:layout_marginStart="10dp" 
			android:padding="10dp"
			tools:visibility="visible"
			android:visibility="gone"
			android:background="@drawable/rounded_button_blue"
			app:layout_constraintTop_toBottomOf="@id/txtTitle"
			app:layout_constraintStart_toStartOf="parent"/>

		<ImageButton
			android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
			android:layout_marginEnd="10dp"
			android:src="@drawable/white_arrow_right"
			android:scaleType="fitCenter"
			android:adjustViewBounds="true"
			android:layout_marginStart="10dp"
			android:padding="10dp"
			tools:visibility="visible"
			android:visibility="gone"
			android:background="@drawable/rounded_button_blue"
			app:layout_constraintTop_toBottomOf="@id/txtTitle"
			app:layout_constraintEnd_toEndOf="parent"/>

		<TextView
			android:id="@+id/txtPageNumber"
			android:layout_width="0dp"	 
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="18sp"
			android:textStyle="bold"
			tools:text="1 of 5"	
			tools:visibility="visible"
			android:visibility="gone"
			android:textColor="@color/DIM_GREY"
			android:padding="@dimen/padding_10"
			app:layout_constraintStart_toEndOf="@id/btn_previous"
			app:layout_constraintEnd_toStartOf="@id/btn_next"
			app:layout_constraintTop_toBottomOf="@id/txtTitle"/>

		<TextView
			android:id="@+id/txtQuestionStatus"
			android:layout_width="0dp"	 
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16sp"
			android:textStyle="bold"
			android:text="T/F: 0 | MC: 0 | Sequence: 0"
			tools:visibility="visible"
			android:visibility="gone"
			android:background="@drawable/rounded_edittext_white_bg"
			android:backgroundTint="@android:color/holo_red_light"
			android:textColor="@color/WHITE"
			android:padding="@dimen/padding_10"
			app:layout_constraintEnd_toStartOf="@id/btnPreviewQA"
			app:layout_constraintStart_toStartOf="@id/btn_previous"	 
			app:layout_constraintTop_toBottomOf="@id/txtPageNumber"/>

		<Button
			android:id="@+id/btnPreviewQA"
			android:layout_width="wrap_content"
			android:layout_height="0dp"	
			android:background="@drawable/rounded_button_blue"
			android:text="Preview Q and A"
			android:padding="10dp"
			android:textAllCaps="false"		 
			android:textColor="@android:color/white"
			app:layout_constraintEnd_toEndOf="@id/btn_next"
			app:layout_constraintTop_toTopOf="@id/txtQuestionStatus"
			app:layout_constraintBottom_toBottomOf="@id/txtQuestionStatus"/>
	</androidx.constraintlayout.widget.ConstraintLayout>

	<LinearLayout
		android:id="@+id/linear_create_game_set"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="@dimen/padding_10">
		<TextView				 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Post to:"
			android:textStyle="bold"
			android:textSize="18sp"
			android:textColor="@android:color/black"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginStart="@dimen/padding_10"
			android:layout_marginBottom="@dimen/padding_10">
			<CheckBox
				android:id="@+id/chkPublic"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Public"
				android:gravity="center"
				android:textSize="16sp"
				android:textColor="@android:color/black"
				android:buttonTint="@color/colorAccent"
				android:layout_marginEnd="@dimen/padding_10"/>
			<CheckBox
				android:id="@+id/chkPrivateGroup"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Private Group"
				android:gravity="center"
				android:textSize="16sp"
				android:textColor="@android:color/black"
				android:buttonTint="@color/colorAccent"/>
		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Name"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:hintEnabled="false"
			app:counterEnabled="true"
			app:counterMaxLength="20"
			android:layout_marginBottom="@dimen/padding_10">
			<EditText
				android:id="@+id/txtName"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:textStyle="normal"
				android:textSize="16sp"
				android:padding="10dp"
				android:maxLength="20"
				android:textColor="@android:color/black"
				android:background="@drawable/rounded_edittext_white_bg"/>
		</com.google.android.material.textfield.TextInputLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Category"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:hintEnabled="false"
			app:counterEnabled="true"
			app:counterMaxLength="20"
			android:layout_marginBottom="@dimen/padding_10">
			<EditText
				android:id="@+id/txtCategory"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:textStyle="normal"
				android:textSize="16sp"
				android:padding="10dp"
				android:maxLength="20"
				android:textColor="@android:color/black"
				android:background="@drawable/rounded_edittext_white_bg"/>
		</com.google.android.material.textfield.TextInputLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Game Type"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>

		<Spinner
			android:id="@+id/spinnerGameType"
			style="@style/spinner_style"
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:textStyle="normal"
			android:spinnerMode="dropdown"
			android:textSize="16sp"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="10dp"
			android:textColor="@android:color/black"/>

		<TextView
			android:id="@+id/txtSubGameType"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Select # of Questions"
			android:textSize="16sp"
			android:textColor="@android:color/black"
			android:layout_marginTop="5dp"/>

		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="10dp">
			<TextView
				android:id="@+id/txtAdvancedGame"
				android:layout_width="300dp"
				android:layout_height="match_parent"
				android:text="Note: For Gauntlet, you need a minimum of 12 questions: 4 T/F, 4 M/C, and 4 sequence"
				android:textSize="13sp"
				android:textColor="@android:color/white"
				android:padding="5dp"
				android:layout_marginEnd="5dp"
				android:background="@drawable/rounded_edittext_white_bg"
				android:backgroundTint="@android:color/holo_red_light"
				android:visibility="gone"
				tools:visibility="visible"/>
			<Spinner
				android:id="@+id/spinnerSubGameType"
				style="@style/spinner_style"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:textStyle="normal"
				android:spinnerMode="dropdown"
				android:textSize="16sp"		
				android:textColor="@android:color/black"/>
		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:layout_marginTop="10dp"
			android:paddingBottom="10dp"
			android:text="Select a PNG or JPEG image, max size KB (optional)"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>
		<ImageView
			android:id="@+id/imageView_browse"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:background="@drawable/linearboard_nopadding" 
			android:scaleType="fitCenter"/>
		<Button
			android:id="@+id/btnBrowseImage"
			android:layout_width="130dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			android:backgroundTint="@color/colorAccent"
			android:background="@drawable/mybutton"
			android:text="Browse..."
			android:padding="10dp"
			android:textAllCaps="false"		 
			android:textColor="@android:color/white"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear_create_questions"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="@dimen/padding_10">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Question Type"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>
		<Spinner
			android:id="@+id/spinnerQuestionType"
			style="@style/spinner_style"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:textStyle="normal"
			android:spinnerMode="dropdown"
			android:textSize="16sp"		
			android:textColor="@android:color/black"
			android:layout_marginBottom="5dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Question"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>

		<EditText
			android:id="@+id/txtQuestion"
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:textStyle="normal"
			android:textSize="16sp"
			android:padding="10dp"	 
			android:textColor="@android:color/black"
			android:background="@drawable/rounded_edittext_white_bg"
			android:layout_marginBottom="5dp"/>

		<TextView
			android:id="@+id/txtAnswer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Answer"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>

		<Spinner
			android:id="@+id/spinnerAnswer"
			style="@style/spinner_style"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:textStyle="normal"
			android:spinnerMode="dropdown"
			android:textSize="16sp"		
			android:textColor="@android:color/black"
			android:layout_marginBottom="5dp"/>

		 <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAnswer"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
			android:visibility="gone"
			tools:visibility="visible"/>
	</LinearLayout>
</LinearLayout>
