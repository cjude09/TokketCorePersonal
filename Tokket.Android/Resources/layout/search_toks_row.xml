<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
      android:layout_marginTop="5dp"
    android:orientation="vertical">


 <!--   <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/placeholder_bg"/>-->
    <LinearLayout
         android:id="@+id/flexBackground"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/bodyBG"
        android:background="@color/WHITE"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    app:flexWrap="nowrap"
	    app:layout_flexBasisPercent="100%">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_flexBasisPercent="25%">
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageTokImgUserPhoto"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtUserDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtPrimaryFieldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_flexBasisPercent="50%"/>
        <ImageView
            android:id="@+id/imageTok"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_flexBasisPercent="25%"/>
    </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
</LinearLayout>
