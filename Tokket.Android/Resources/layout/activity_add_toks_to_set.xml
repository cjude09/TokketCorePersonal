
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <!--ToolBar-->
    <LinearLayout
        android:id="@+id/LinearSetsToolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/primary">
        <TextView
            android:id="@+id/btnMySetsCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Cancel"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/txtTotalToksSelected"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/btnMySetsAdd"
            android:background="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+Add Set"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtMySetsPageNoSets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:text="Click '+ Add Set' to add a set"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@color/secondary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinearSetsToolbar"/>
    <TextView
        android:id="@+id/txtMySetsPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="gone"
        android:padding="5dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtMySetsPageNoSets"/>

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtMySetsPageTitle"/>

    <ImageButton
        android:id="@+id/imageButtonFilterToks"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/filter_list"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/txtHeader"
        app:layout_constraintBottom_toBottomOf="@id/txtHeader"
        app:layout_constraintStart_toEndOf="@id/txtHeader"/>

    <TextView
        android:id="@+id/TextNothingFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHeader"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/mytoksets_swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextNothingFound"
        app:layout_constraintBottom_toTopOf="@id/bottomProgress"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_mytoksets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/mysets_shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/WHITE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mytoksets_swiperefresh"
        app:layout_constraintBottom_toBottomOf="@id/mytoksets_swiperefresh">
        <!-- Adding 5 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center">
            <include
                layout="@layout/toks_placeholder_item" />
            <include
                layout="@layout/toks_placeholder_item" />
            <include
                layout="@layout/toks_placeholder_item" />
            <include
                layout="@layout/toks_placeholder_item" />
        </LinearLayout>
    </io.supercharge.shimmerlayout.ShimmerLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BtnAddToGroup"
        android:text="Add Classtok to Group"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/WHITE"
        android:background="@drawable/blue_button"
        />
    <ProgressBar
        android:id="@+id/bottomProgress"
        android:theme="@style/CircularProgressBlue"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_height="26dp"
        android:layout_width="26dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:indeterminate="true"
        app:layout_constraintTop_toBottomOf="@id/mytoksets_swiperefresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/linear_mysetsprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:backgroundTint="#80000000"
        android:background="@drawable/tileview_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/progressBarTextMySets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="5dp"/>
        <ProgressBar
            android:id="@+id/progressbarMySets"
            android:theme="@style/CircularProgress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_height="86dp"
            android:layout_width="86dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:padding="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>