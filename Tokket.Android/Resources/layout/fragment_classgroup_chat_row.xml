<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgcomment_userphoto"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        tools:src="@drawable/avatar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      />
    <!--  app:layout_constraintBottom_toBottomOf="parent"-->
    <TextView
        android:id="@+id/txtUserDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Username"
        android:padding="5dp"
        android:textSize="16sp"
        android:gravity="start"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@id/imgcomment_userphoto"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txtTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        tools:text="TimeStamp"
        android:padding="5dp"
        android:textSize="12sp"
        android:gravity="start"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@id/txtUserDisplayName"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txtCommentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        tools:text="Comment"
        android:paddingStart="5dp"
        android:textSize="16sp"
        android:gravity="start"
        android:textColor="?attr/textColor"
        app:layout_constraintStart_toEndOf="@id/imgcomment_userphoto"
        app:layout_constraintTop_toBottomOf="@id/txtUserDisplayName"/>
           <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filecommentRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:paddingStart="5dp"
        android:nestedScrollingEnabled="true"
           app:layout_constraintStart_toStartOf="@id/txtUserDisplayName"
         app:layout_constraintTop_toBottomOf="@id/txtCommentMessage"
       />
       <Button
        android:id="@+id/btn_menu"
        android:text="@string/tricolon"
        android:textStyle="bold"
        android:textSize="24dp"
        android:shadowColor="@android:color/transparent"
        android:background="@android:color/transparent"
        android:layout_width="20dp"   
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
         android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linearToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtTimeStamp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:id="@+id/txtToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout"
            tools:text="December 21, 2021 09:00 AM"
            android:padding="10dp"
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
