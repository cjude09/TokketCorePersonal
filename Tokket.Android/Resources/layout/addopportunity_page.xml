<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/browser_actions_bg_grey">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:minWidth="25px"
        android:minHeight="25px">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:rowCount="15"
            android:numColumns="1"
            android:id="@+id/gridLayout2">
            <Spinner
                android:id="@+id/spn_opportunityType"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textStyle="normal"
                android:spinnerMode="dropdown"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout11">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:counterEnabled="false"
                    app:counterMaxLength="100"
                    android:id="@+id/textInputLayout10">
                    <EditText
                        android:id="@+id/txt_title"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:hint="Title"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:maxLength="50"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"
                        android:maxLines="100"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout12">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    android:id="@+id/textInputLayout11">
                    <EditText
                        android:id="@+id/txt_company"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:hint="Company Name"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:maxLength="50"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"
                        android:maxLines="100"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/country_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <Spinner
                    android:id="@+id/spn_country"
                    android:layout_width="fill_parent"
                    style="@style/spinner_style"
                    android:layout_height="45dp"
                    android:textStyle="normal"
                    android:spinnerMode="dropdown"
                    android:textSize="11sp"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:gravity="left"
                android:layout_gravity="center_horizontal|fill_horizontal">
                <Spinner
                    android:id="@+id/spn_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor = "@android:color/black"
                    android:background="@drawable/rounded_edittext_white_bg"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout13">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:counterEnabled="false"
                    app:counterMaxLength="100"
                    android:id="@+id/textInputLayout12">
                    <EditText
                        android:id="@+id/txt_amount"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:hint="Pay Amount"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:inputType="number"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"
                        android:maxLines="100"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/datepicker"
                android:clickable="true"
                android:cursorVisible="false"
                android:layout_width="fill_parent"
                android:textStyle="normal"
                android:layout_height="45dp"
                android:focusable="false"
                android:layout_column="0"
                android:layout_row="6"
                android:padding="10dp"
                android:focusableInTouchMode="false"
                android:textColor="@android:color/black"
                android:background="@drawable/rounded_edittext_white_bg"
                android:hint="Due Date"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout14">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    android:id="@+id/textInputLayout13">
                    <EditText
                        android:id="@+id/txt_description"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:hint="Description"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:maxLength="100"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"
                        android:maxLines="100"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout15">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    android:id="@+id/textInputLayout14">
                    <EditText
                        android:id="@+id/txt_requirements"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:hint="Requirements"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:maxLength="100"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"
                        android:maxLines="100"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout16">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:counterEnabled="false"
                    app:counterMaxLength="100"
                    android:id="@+id/textInputLayout15">
                    <EditText
                        android:id="@+id/txt_email"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:hint="Email Address"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:maxLength="50"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"
                       />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout17">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:counterEnabled="false"
                    app:counterMaxLength="100"
                    android:id="@+id/textInputLayout16">
                    <EditText
                        android:id="@+id/txt_address"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:hint="Address"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="11"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout18">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:counterEnabled="false"
                    app:counterMaxLength="100"
                    android:id="@+id/textInputLayout17">
                    <EditText
                        android:id="@+id/txt_phonenumber"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:hint="Phone Number"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="12"
                android:layout_column="0"
                android:layout_rowSpan="2"
                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout19">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:counterEnabled="false"
                    app:counterMaxLength="100"
                    android:id="@+id/textInputLayout18">
                    <EditText
                        android:id="@+id/txt_about"
                        android:hint="About the company"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:gravity="top"
                        android:maxLength="2000"
                        android:textColor="@android:color/black"
                        android:background="@drawable/rounded_edittext_white_bg"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="14"
                android:padding="5dp"
                android:id="@+id/linearLayout20">
                <TextView
                    android:id="@+id/textView2"
                    android:drawableLeft="@drawable/image_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingBottom="10dp"
                    android:text="Select an image."
                    android:textSize="16sp"
                    android:textColor="@android:color/black" 
                    android:clickable="true"
                    android:onClick="OnClickAddTokImgMain"/>

                <ImageView
                    android:id="@+id/img_browse"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/linearboard_nopadding"
                    android:scaleType="fitCenter"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/linearLayout20">
                    <Button
                        android:id="@+id/btnBrowseImage"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorAccent"
                        android:background="@drawable/mybutton"
                        android:text="Browse..."
                        android:padding="10dp"
                        android:textAllCaps="false"
                        android:onClick="OnClickAddTokImgMain"
                        android:textColor="@android:color/white"/>
                    <Button
                        android:id="@+id/btnRemoveImage"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorAccent"
                        android:background="@drawable/mybutton"
                        android:text="Remove Image"
                        android:visibility="gone"
                        android:padding="10dp"
                        android:textAllCaps="false"
                        android:onClick="OnClickRemoveTokImgMain"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </GridLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent">
        <TextView
            android:id="@id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Cancel"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnAddOpportunity"
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="40dp"
            android:text="Add Opportunity"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:gravity="right|center"
            android:paddingRight="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!--Progress-->
    <LinearLayout
        android:id="@+id/LinearProgress_ClassGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="#80000000">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:backgroundTint="#90000000"
            android:background="@drawable/tileview_layout">
            <TextView
                android:id="@+id/TextProgressStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout>
