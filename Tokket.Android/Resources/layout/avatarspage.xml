<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/includeHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_layout"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            style="@style/buttonMain"
            android:id="@+id/btnAvatarsSave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"         
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="Select"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerAvatarsPage"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <!--Progress-->
	    <LinearLayout
		    android:id="@+id/linear_AvatarProgress"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible">
		    <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_anchorGravity="center|top"
                app:layout_anchor="@+id/txtEmail"
                android:layout_centerInParent="true"
                android:backgroundTint="#80000000"
                android:background="@drawable/tileview_layout">
                <TextView
                    android:id="@+id/TextProgressStatus"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Loading..."
                     android:textSize="15sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:gravity="center"
                     android:padding="5dp"/>
                <ProgressBar
                    android:theme="@style/CircularProgressBlue"
                    android:layout_height="86dp"
                    android:layout_width="86dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:padding="5dp"/>
            </LinearLayout>
	    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
