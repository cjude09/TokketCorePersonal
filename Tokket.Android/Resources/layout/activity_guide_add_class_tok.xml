<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
	android:layout_width="match_parent"
	android:layout_height="match_parent"	 
    android:background="@color/browser_actions_bg_grey">
	
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"		 
		android:fitsSystemWindows="true"
		android:fillViewport="true"
		app:layout_constraintTop_toBottomOf="@id/linearCancel"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="15dp">
			<TextView
				android:id="@+id/lblPostACopyTo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Post a copy to:"
				android:gravity="start"
				android:padding="10dp"
				android:textStyle="bold"
				android:textSize="16sp"
				android:textColor="@android:color/black"
				app:layout_constraintStart_toStartOf="parent"  
				app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:id="@+id/linearPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/lblPostACopyTo">
                <CheckBox
                    android:id="@+id/chkGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/colorAccent"/>
                <TextView
                    android:id="@+id/txtChkGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group"
                    android:contentDescription="privacy"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@android:color/black"/>
                <CheckBox
                    android:id="@+id/chkPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/colorAccent"/>
                <TextView
                    android:id="@+id/txtChkPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public"
                    android:contentDescription="privacy"
                    android:gravity="center"
                    android:textSize="16sp"
					   android:layout_marginEnd="10dp"
                    android:textColor="@android:color/black"/>
				<CheckBox
					android:id="@+id/chkTokChannel"
					android:text="Tok Channels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					 android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>
			<LinearLayout
				android:id="@+id/linearClassGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:orientation="vertical"
                 app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/linearPrivacy">
				<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:text="Class Group"
					android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
				<TextView
					android:id="@+id/txtClassGroup"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_blue_dark"/>
			</LinearLayout>
            <LinearLayout
				android:id="@+id/linearSpinnerClassType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/linearClassGroup"
                android:layout_marginBottom="10dp">
                  <Spinner
					android:id="@+id/txtAddClassTokType"
                    style="@style/spinner_style"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:textStyle="normal"
					android:spinnerMode="dropdown"
					android:textSize="16sp"		   
					android:layout_marginBottom="5dp"
					android:textColor="@android:color/black"/>
				  <TextView
					android:id="@+id/labelBulletType"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Bullet Type"
					android:textSize="16sp"
					android:textColor="@android:color/black"/>
				<Spinner
					android:id="@+id/txtAddBulletType"
                    style="@style/spinner_style"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:textStyle="normal"
					android:spinnerMode="dropdown"
					android:textSize="16sp"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:textColor="@android:color/black"
					android:visibility="gone"/>
            </LinearLayout>
			<Button
                android:id="@+id/btnSelectColor"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Select Color"
                android:textSize="15sp"
                android:padding="10dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearSpinnerClassType"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Selected Color:"   
                android:gravity="start|center"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toStartOf="@id/txtColor"
				app:layout_constraintTop_toTopOf="@id/btnSelectColor"/>
            <TextView
                android:id="@+id/txtColor"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@color/WHITE"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnSelectColor"/>
             <EditText
				android:id="@+id/txtAddClassTokClass"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:textStyle="normal"
				android:textSize="16sp"
				android:padding="10dp"
				android:maxLength="50"
				android:hint="Class Name (required field)"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="10dp"
				android:textColor="@android:color/black"
				android:background="@drawable/rounded_edittext_white_bg"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/btnSelectColor"/>
            <EditText
				android:id="@+id/txtAddClassTokCategory"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:textStyle="normal"
				android:textSize="16sp"
				android:hint="Category (required field)"
				android:padding="10dp"
				android:maxLength="50"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="10dp"
				android:textColor="@android:color/black"
				android:background="@drawable/rounded_edittext_white_bg"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/txtAddClassTokClass"/>
			<Button
				android:id="@+id/btnAddTileSticker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAllCaps="false"
				android:text="+ Add Tile Sticker"
				android:padding="@dimen/padding_10"
				android:onClick="OnAddTokSticker"
				android:textColor="@color/WHITE"
				android:background="@color/limegreen"
				android:layout_marginTop="@dimen/padding_10"
				android:textStyle="normal"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/txtAddClassTokCategory"/>
			<ImageView
                android:id="@+id/addclasstok_stickerimage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
				android:visibility="gone"
				tools:visibility="visible"
				app:layout_constraintStart_toEndOf="@id/btnAddTileSticker"
				app:layout_constraintTop_toTopOf="@id/btnAddTileSticker"
				app:layout_constraintBottom_toBottomOf="@id/btnAddTileSticker"
				app:layout_constraintEnd_toEndOf="parent"/>
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/txtInputLayoutClassTokPrimary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:hintEnabled="false"
				app:counterEnabled="true"
				app:counterMaxLength="200"
				android:layout_marginTop="10dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/btnAddTileSticker">
				<EditText
					android:id="@+id/txtAddClassTokPrimary"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:textStyle="normal"
					android:textSize="16sp"
					android:hint="Title"
					android:padding="10dp"
					android:maxLength="200"
					android:textColor="@android:color/black"
					android:background="@drawable/rounded_edittext_white_bg"/>
			</com.google.android.material.textfield.TextInputLayout>
			 <TextView
				android:id="@+id/txtAddMainImage"
				android:drawableLeft="@drawable/image_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left|center"
				android:paddingBottom="10dp"
				android:text="Select an image."
				android:textSize="16sp"
				android:textColor="@android:color/black"
				android:textAllCaps="false"
				android:clickable="true"
				android:background="?attr/selectableItemBackground"
				app:layout_constraintStart_toStartOf="parent"	   
				app:layout_constraintTop_toBottomOf="@id/txtInputLayoutClassTokPrimary"/>
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="100dp"
                android:background="@drawable/linearboard_nopadding"
				android:id="@+id/addclasstok_imagebrowse"
				android:scaleType="fitCenter"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/txtAddMainImage"/>
            <LinearLayout
                android:id="@+id/LinearAddClassTokSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/addclasstok_imagebrowse"
                android:layout_marginBottom="10dp">
                <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Detail"
				    android:textSize="16sp"
				    android:textColor="@android:color/black"/>
				<com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
					app:counterEnabled="true"
					app:counterMaxLength="500">
					<EditText
						android:id="@+id/txtAddClassTokSecondary"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textStyle="normal"
						android:textSize="16sp"
						android:padding="10dp"
						android:maxLength="500"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="5dp"
						android:textColor="@android:color/black"
						android:background="@drawable/rounded_edittext_white_bg"/>
				</com.google.android.material.textfield.TextInputLayout>
				<com.google.android.flexbox.FlexboxLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_marginTop="5dp"
					app:flexWrap="wrap"
					app:alignItems="flex_start"
					app:alignContent="flex_start"
					app:justifyContent="flex_start"
					app:layout_flexBasisPercent="100%">
					<Button
						android:id="@+id/btnPasteTokLink"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Paste Tok Link"
						android:textSize="16sp"
						android:textColor="@android:color/holo_blue_dark"
						android:textAllCaps="false"/>
					<Button
						android:id="@+id/btnSearchForToks"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Search for Toks"
						android:textSize="16sp"
						android:textColor="@color/limegreen"
						android:textAllCaps="false"/>
					<Button
						android:id="@+id/btnRemovePaste"
						android:layout_width="50dp"
						android:layout_height="wrap_content"
						android:text="X"
						android:textSize="16sp"
						android:textColor="@color/WHITE"
						android:backgroundTint="@android:color/holo_red_dark"
						android:textAllCaps="false"
						android:visibility="gone"
						tools:visibility="visible"/>
				</com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearAddClassTokDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/LinearAddClassTokSecondary">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerAddClassTok"  
                    android:layout_width="match_parent"  
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                <Button
				    android:id="@+id/btnAddClassTokAddDetail"
				    android:layout_width="150dp"
				    android:layout_height="40dp"
				    android:layout_column="0"
				    android:layout_row="9"
				    android:layout_gravity="center"
				    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/limegreen"
				    android:background="@drawable/mybutton"
				    android:text="+ Add Detail"
				    android:textAllCaps="false"
				    android:onClick="OnClickAddDetail"
				    android:textColor="@android:color/white"/>
            </LinearLayout>
			<LinearLayout
				android:id="@+id/linearSourceUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/LinearAddClassTokDetail">
				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Source Url"
				    android:textSize="16sp"
				    android:textColor="@android:color/black"/>
				<com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
				    >
					<EditText
						android:id="@+id/txtSourceUrl"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textStyle="normal"
						android:textSize="16sp"
						android:padding="10dp"
						android:maxLength="50"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="5dp"
						android:textColor="@android:color/black"
						android:background="@drawable/rounded_edittext_white_bg"/>
				</com.google.android.material.textfield.TextInputLayout>
			 </LinearLayout>
			<LinearLayout
				android:id="@+id/linearSourceNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/linearSourceUrl">
				  <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Source Notes"
				    android:textSize="16sp"
				    android:textColor="@android:color/black"/>
				<com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:hintEnabled="false"
					app:counterEnabled="true"
					app:counterMaxLength="5000">
					<EditText
						android:id="@+id/txtSourceNotes"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textStyle="normal"
						android:textSize="16sp"
						android:padding="10dp"
						android:maxLength="50"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="5dp"
						android:textColor="@android:color/black"
						android:background="@drawable/rounded_edittext_white_bg"/>
				</com.google.android.material.textfield.TextInputLayout>
			 </LinearLayout>
            <LinearLayout
				android:id="@+id/linearNotes"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/linearSourceNotes">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:text="Notes (2000 characters max)"
					android:textSize="16sp"
					android:textColor="@android:color/black"/>
				<EditText
					android:id="@+id/txtAddClassTokNotes"
					android:layout_width="match_parent"
					android:layout_height="200dp"
					android:textStyle="normal"
					android:textSize="16sp"
					android:padding="10dp"
					android:gravity="top"
					android:maxLength="2000"
					android:textColor="@android:color/black"
					android:background="@drawable/rounded_edittext_white_bg"/>
			</LinearLayout>

			<!--Animation Views-->
			<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"           
                android:src="@drawable/crc_girl1"  
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue1"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txt_dialogue1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp" 
                android:text="Step 1: Tap floating button from the home page"
                android:textColor="@color/WHITE"
                android:gravity="center_horizontal"        
                android:background="@drawable/speech_bubble_blue"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/imgGuide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

			<ImageView
				android:id="@+id/imageViewArrowGuide2"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/white_arrow_left"
				android:scaleType="fitStart"
				android:tint="@color/red_500"   
				android:elevation="3px"
				android:visibility="invisible"
				tools:visibility="visible"
				app:layout_constraintBottom_toBottomOf="@id/linearSpinnerClassType"
				app:layout_constraintTop_toTopOf="@id/linearSpinnerClassType"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"/>

			<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"            
                android:src="@drawable/crc_guy1"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue2"
                app:layout_constraintEnd_toStartOf="@id/txt_dialogue2"/>

            <TextView
                android:id="@+id/txt_dialogue2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:paddingTop="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp" 		 
                android:text="Step 2: Select the Tok Type and enter the Class Name"
                android:textColor="@color/WHITE"
                android:gravity="center_horizontal"        
                android:background="@drawable/speech_bubble_blue"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/btnSelectColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue1"/>

			<ImageView
				android:id="@+id/imageViewArrowGuide3"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/white_arrow_left"
				android:scaleType="fitStart"
				android:tint="@color/red_500"   
				android:elevation="3px"
				android:visibility="invisible"
				tools:visibility="visible"
				app:layout_constraintBottom_toBottomOf="@id/txtAddClassTokCategory"
				app:layout_constraintTop_toTopOf="@id/txtAddClassTokCategory"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"/>

			<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"             
                android:src="@drawable/crc_girl2"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogue3"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txt_dialogue3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp" 	
				android:elevation="6px"
                android:text="Step 3:Enter the Category and Select the Bullet Type"
                android:textColor="@color/WHITE"
                android:gravity="center_horizontal"        
                android:background="@drawable/speech_bubble_blue"
                android:visibility="invisible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/imgGuide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgGuide2"/>

			<ImageView
				android:id="@+id/imageViewArrowGuide4"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/white_arrow_left"
				android:scaleType="fitStart"
				android:tint="@color/red_500"   
				android:elevation="3px"
				android:visibility="invisible"
				tools:visibility="visible"
				app:layout_constraintBottom_toBottomOf="@id/LinearAddClassTokSecondary"
				app:layout_constraintTop_toTopOf="@id/LinearAddClassTokSecondary"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"/>

			<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuide4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"     
