<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshComment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tokinfoRecyclerTokMojisDummy"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>
	    <androidx.core.widget.NestedScrollView
		    android:id="@+id/NestedScrollTokInfo"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scrollbars="none"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_marginBottom="70dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <GridLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="16dp"
			    android:rowCount="12"
			    android:numColumns="3"
                android:background="@android:color/white">
			    <LinearLayout
				    android:layout_height="wrap_content"
				    android:layout_width="match_parent"
				    android:layout_row="0"
				    android:layout_column="0"
				    android:gravity="left"
				    android:layout_marginBottom="15dp"
				    android:layout_gravity="center_horizontal"
				    android:layout_centerInParent="true"
				    android:orientation="horizontal">
				    <ImageView
					    android:id="@+id/img_tokUserPhoto"
					    android:layout_width="48dp"
					    android:layout_height="48dp"
                        android:layout_marginRight="5dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless"/>
				    <TextView
					    android:id="@+id/lbl_tokinfonameuser"
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:clickable="true"
					    android:gravity="center|center"
					    android:textSize="14sp"
					    android:textStyle="bold"
					    android:textColor="@android:color/black"/> 
				    <TextView
					    android:id="@+id/lbl_tokDateCreated"
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:gravity="center|center"
					    android:textSize="12sp"
                        android:layout_marginLeft="15dp"
					    android:textColor="@android:color/black"/>
                    <Button
                        android:id="@+id/btnTokInfoEyeIcon"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:text="eye"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="ToolTipViews"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:textAllCaps="false"
                        android:background="?android:attr/selectableItemBackgroundBorderless"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
					        android:id="@+id/lblTokInfoViews"
					        android:layout_width="wrap_content"
					        android:layout_height="match_parent"
					        android:gravity="left|center"
					        android:textSize="13sp"
					        android:textColor="@android:color/black"/>
                        <ProgressBar
                            android:id="@+id/circleprogressViews"
                            style="@style/Widget.AppCompat.ProgressBar"
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:indeterminate="true"/>
                    </FrameLayout>
			    </LinearLayout>
                <ImageView
                    android:id="@+id/imgtokinfo_stickerimage"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_row="1"
				    android:layout_column="0"/>
                <TextView
				    android:id="@+id/lbl_tokTopic1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
                    android:layout_row="2"
				    android:layout_column="0"
				    android:textSize="16sp"
				    android:textStyle="bold"
				    android:textColor="@android:color/black"/>
			    <LinearLayout
				    android:layout_height="wrap_content"
				    android:layout_width="match_parent"
				    android:gravity="left"
				    android:layout_gravity="center_horizontal|fill_horizontal"
				    android:layout_centerInParent="true"
				    android:orientation="vertical"
				    android:layout_row="3"
				    android:layout_column="0"
				    android:id="@+id/linear_Topic"/>
			    <LinearLayout
				    android:layout_height="wrap_content"
				    android:layout_width="match_parent"
				    android:layout_row="4"
				    android:layout_column="0"
				    android:gravity="left"
				    android:layout_gravity="center_horizontal|fill_horizontal"
				    android:layout_centerInParent="true"
				    android:orientation="vertical"
				    android:id="@+id/linear_ConvertTopic">
				    <TextView
					    android:id="@+id/lbl_tokTopicConvert1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_row="1"
					    android:layout_column="0"
					    android:gravity="center_horizontal|center_vertical"
					    android:textSize="16sp"
					    android:textStyle="bold"
					    android:textColor="@android:color/black"/>
				    <include layout="@layout/tokinfo_isenglish"/>
			    </LinearLayout>
                <com.google.android.flexbox.FlexboxLayout
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"
                    android:layout_row="5"
				    android:layout_column="0"
				    android:layout_columnSpan="3"
		            app:flexWrap="nowrap"
                    app:alignItems="center"
                    app:alignContent="center"
                    app:justifyContent="center"
                    app:layout_flexBasisPercent="100%">
                    <LinearLayout
					    android:layout_height="wrap_content"
					    android:layout_width="wrap_content"
					    android:layout_row="0"
					    android:layout_column="0"
					    android:layout_marginTop="10dp"
					    android:layout_marginBottom="10dp"
					    android:layout_marginRight="10dp"
					    android:gravity="left"
					    android:layout_gravity="left"
					    android:layout_centerInParent="true"
					    android:orientation="vertical"
                        app:layout_flexBasisPercent="100%">
					    <TextView
                            android:id="@+id/LabelCategory"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="@string/underCategory"
					        android:gravity="left"
					        android:textSize="12sp"
					        android:textStyle="bold"
					        android:textColor="@android:color/black"/>
					    <TextView
					        android:id="@+id/lblTokInfoTokCategory"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
					        android:text="Category"
					        android:gravity="left"
					        android:textSize="12sp"
					        android:textStyle="bold"
					        android:textColor="@color/primary_dark"/>
				    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Tok_group_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
					    android:layout_marginBottom="10dp"
					    android:layout_marginLeft="10dp"
					    android:layout_marginRight="10dp"
					    android:gravity="left"
					    android:layout_gravity="left"
					    android:orientation="vertical"
                        app:layout_flexBasisPercent="100%">
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                            android:id="@+id/LabelGroup"
                              android:text="@string/underGroup"
                             android:gravity="left"
					        android:textSize="12sp"
					        android:textStyle="bold"
					        android:textColor="@android:color/black"
                            />
                        <TextView
                            android:id="@+id/lblClassGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test Group"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
					        android:gravity="left"
					        android:textSize="12sp"
					        android:textStyle="bold"
					        android:textColor="@color/primary_dark"/>
                    </LinearLayout>
				    <LinearLayout
					    android:layout_height="wrap_content"
					    android:layout_width="wrap_content"
					    android:layout_marginTop="10dp"
					    android:layout_marginBottom="10dp"
					    android:layout_marginLeft="10dp"
					    android:layout_marginRight="10dp"
					    android:gravity="left"
					    android:layout_gravity="left"
					    android:orientation="vertical"
                        app:layout_flexBasisPercent="100%">
					    <TextView
                            android:id="@+id/LabelTokGroup"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="@string/underTokGroup"
					        android:gravity="left"
					        android:textSize="12sp"
					        android:textStyle="bold"
					        android:textColor="@android:color/black"/>
					    <TextView
					        android:id="@+id/lblTokInfoTokGroup"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="Tok Group"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
					        android:gravity="left"
					        android:textSize="12sp"
					        android:textStyle="bold"
					        android:textColor="@color/primary_dark"/>
				    </LinearLayout>
                </com.google.android.flexbox.FlexboxLayout>
			    <ImageView
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:maxHeight="97dp"
				    android:layout_row="6"
				    android:layout_column="0"
				    android:padding="10dp"
                    android:clickable="true"
				    android:scaleType="fitCenter"
				    android:id="@+id/tokinfo_imgMain"
				    android:layout_gravity="center|top"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_row="9"
				    android:layout_column="0">
                    <TextView
                        android:id="@+id/TextTotalComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>
                    <ProgressBar
                        android:id="@+id/circleprogressComments"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"/>
                </FrameLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
				    android:layout_column="0"
                    android:background="@android:color/white">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tokinfo_comments_recyclerView"  
                        android:layout_width="match_parent"  
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                    <io.supercharge.shimmerlayout.ShimmerLayout
                        android:id="@+id/ShimmerTokInfoComments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:gravity="center">
                            <include layout="@layout/toks_placeholder_item" />
                            <include layout="@layout/toks_placeholder_item" />
                            <include layout="@layout/toks_placeholder_item" />
                            <include layout="@layout/toks_placeholder_item" />
                        </LinearLayout>
                    </io.supercharge.shimmerlayout.ShimmerLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            
            </GridLayout>
	    </androidx.core.widget.NestedScrollView>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tokinfo_toolbar"
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:layout_height="?attr/actionBarSize"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/primary"/>
        <!--Views-->
        <FrameLayout
            android:id="@+id/frame_tokViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:backgroundTint="@android:color/black"
            android:background="@drawable/tileview_layout"
            app:layout_anchorGravity="top|top"
            app:layout_anchor="@+id/btnTokInfoEyeIcon">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/TextTotalViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/TextTotalOpened"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/TextTotalVisited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/TextTotalOpenedByOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/TextTotalVisitedByOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>
            </LinearLayout>
        </FrameLayout>
        <!--Comment-->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/NestedTokInfoComment"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:scrollbars="none"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:layout_gravity="center_horizontal|bottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@android:color/white">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="#c0c0c0"/>
                    <com.google.android.flexbox.FlexboxLayout
		                android:layout_height="wrap_content"
		                android:layout_width="match_parent"
		                android:layout_gravity="center_horizontal|bottom"
		                app:flexWrap="nowrap"
                        app:alignItems="center"
                        app:alignContent="center"
                        app:justifyContent="center">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            app:layout_flexBasisPercent="13%"
                            app:layout_alignSelf="flex_start">
                            <ImageView
                                android:id="@+id/imgcomment_userphoto"
			                    android:layout_width="wrap_content"
			                    android:layout_height="40dp"/>
                        </LinearLayout>
                        <com.google.android.flexbox.FlexboxLayout
		                    android:layout_height="wrap_content"
		                    android:layout_width="match_parent"
		                    app:flexWrap="nowrap"
                            app:alignItems="center"
                            app:alignContent="center"
                            app:justifyContent="center"
                            app:layout_flexBasisPercent="78%"
                            android:background="@drawable/linearboard_nopadding">
                            <EditText
			                    android:id="@+id/tokinfo_txtComment"
			                    android:layout_width="match_parent"
			                    android:layout_height="wrap_content"
			                    android:textStyle="normal"
			                    android:textSize="14sp"
			                    android:padding="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
			                    android:hint="Add a comment..."
                                android:contentDescription="comment_editor"
			                    android:gravity="top"
			                    android:maxLength="2000"
			                    android:textColor = "@android:color/black"
			                    android:background="@drawable/linearboard_nopadding"
                                android:backgroundTint="@android:color/white"
                                app:layout_flexBasisPercent="88%"/>
                            <ImageView
                                android:id="@+id/btnTokInfoSmiley"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/TOKKET_smiley_1B"
                                android:background="?attr/selectableItemBackground"
                                app:layout_flexBasisPercent="10%"
                                app:layout_alignSelf="flex_start"/>
                        </com.google.android.flexbox.FlexboxLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            app:layout_flexBasisPercent="11%"
                            app:layout_alignSelf="baseline">
                            <ImageView
                                android:id="@+id/btnTokInfo_SendComment"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:tag="0"
                                android:layout_gravity="center"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:contentDescription="comment"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/send_black_24"
                                android:scaleType="fitCenter"/>
                        </LinearLayout>
	                </com.google.android.flexbox.FlexboxLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#c0c0c0"/>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tokinfoRecyclerTokMojis"  
                            android:layout_width="match_parent"  
                            android:layout_height="250dp"
                            android:visibility="gone"
                            android:padding="5dp"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                </LinearLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </androidx.core.widget.NestedScrollView>

        <!--Progress Comment-->
        <LinearLayout
            android:id="@+id/linearProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/padding_10"
            android:visibility="gone"
            tools:visibility="visible"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout">
            <TextView
                android:id="@+id/txtProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logging in..."
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="5dp"/>
            <ProgressBar
                android:theme="@style/CircularProgressWhite"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:padding="5dp"/>
        </LinearLayout>
        <View
            android:id="@+id/ViewDummyForTouch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>