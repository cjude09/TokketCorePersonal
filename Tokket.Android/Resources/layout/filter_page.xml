<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor">
    <include
        android:id="@+id/includeHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_layout"/>
    <androidx.core.widget.NestedScrollView   
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/includeHeaderLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">
            <!--TITLE 1-->
            <RadioGroup
                android:id="@+id/LinearFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:text="Feed"                
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/btnGlobalToks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Global Toks"
                    android:tag="9"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnFeaturedToks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:text="Featured Toks"
                    android:tag="7"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </RadioGroup>
            <!--Filter By-->
            <RadioGroup
                android:id="@+id/LinearFilterBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:text="Filter By"                
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/btnFilterByAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_classtok"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="All"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_classtok"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Class Name"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_classtok"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Category"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_classtok"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:text="Type"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </RadioGroup>
            <!--TITLE 2-->
            <RadioGroup
                android:id="@+id/radioGroupViewAs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:text="View As"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/btnFilterToks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Toks"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnFilterCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:text="Cards"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </RadioGroup>


            <!--View as Class Groups -->
            <RadioGroup
                android:id="@+id/linearGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:text="Group"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/btnFilterMyGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="My Groups"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnFilterJoinedGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Joined Groups"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnFilterOwnedGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:text="Owned Groups"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </RadioGroup>

            <!--Ascending and DescendingSort-->
            <RadioGroup
                android:id="@+id/linearSortTo"
                 android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:text="Reference ID/#"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                  <RadioButton
                    android:id="@+id/btnRefAscending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Ascending"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                 <RadioButton
                    android:id="@+id/btnRefDescending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Descending"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:text="Title"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                 <RadioButton
                    android:id="@+id/btnTitleAscending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Ascending"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                 <RadioButton
                    android:id="@+id/btnTitleDescending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Descending"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </RadioGroup>
            <!--Sort By-->
            <RadioGroup
                android:id="@+id/linearSortBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:text="Sort By"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/btnFilterStandard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Standard"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnRecent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Recent"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnTopToks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:text="Top Toks"
                    android:tag="0"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

            </RadioGroup>
        
            <!--Image-->
            <RadioGroup
                android:id="@+id/linearImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:text="Image"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/btnFilterImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="Image"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnFilterNoImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:layout_marginBottom="5dp"
                    android:text="No Image"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <RadioButton
                    android:id="@+id/btnFilterBoth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:button="@null"
                    android:text="Both"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </RadioGroup>
        
            <!--TITLE 4-->
            <LinearLayout
                android:id="@+id/linearPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:text="Play"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <Button
                    android:id="@+id/btnFilterSets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:layout_marginBottom="5dp"
                    android:text="Sets"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btnFilterTokCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:layout_marginBottom="5dp"
                    android:text="Tok Cards"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btnFilterTokMatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:layout_marginBottom="5dp"
                    android:text="Tok Match"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btnFilterTokChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_filter_tokkepedia"
                    android:padding="@dimen/padding_10"
                    android:text="Tok Choice"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
       
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>