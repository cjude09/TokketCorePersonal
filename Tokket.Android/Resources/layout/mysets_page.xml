
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bgColor">
    <!--ToolBar-->
    <LinearLayout
        android:id="@+id/LinearSetsToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/primary">
        <TextView
            android:id="@+id/btnMySetsCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Cancel"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@color/WHITE"/>
        <TextView
            android:id="@+id/txtTotalToksSelected"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="?attr/textColor"/>
        <TextView
            style="@style/buttonMain"
            android:id="@+id/btnMySetsAdd" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+Add Set"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/WHITE"/>
        <TextView
            style="@style/buttonRed"
            android:id="@+id/btnRemoveClassSet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="-Remove Class Sets"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/WHITE"
            android:visibility="gone"/>

        <TextView
            style="@style/buttonRed"
            android:id="@+id/btnDeleteSets"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Delete"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/WHITE"
            android:visibility="gone"
            android:layout_marginEnd="5dp"/>

        <TextView
            style="@style/buttonGrey"
            android:id="@+id/btnCancelDelete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/WHITE"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabMySets"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/bgColor"
        app:layout_scrollFlags="scroll|enterAlways"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="?attr/textColor"
        app:tabTextAppearance="@style/MyCustomTabText13"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnTab1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        tools:text="TAB 1"
        android:gravity="center"    
        android:backgroundTint="@color/tab1_color"
        android:paddingStart="20dp"
        android:textColor="@color/WHITE"
        app:layout_constraintTop_toBottomOf="@id/txtSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewMidTab"/>

    <View
        android:id="@+id/viewMidTab"
        android:layout_width="1dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/txtSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnTab2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        tools:text="TAB 2"
        android:gravity="center"
        android:textColor="@color/WHITE"
        android:paddingEnd="20dp"
        android:backgroundTint="@color/tab2_color"
        app:layout_constraintTop_toBottomOf="@id/txtSearch"
        app:layout_constraintStart_toEndOf="@id/viewMidTab"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerMySets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabMySets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerSearchSets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabMySets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/bgColor"
        app:layout_constraintTop_toBottomOf="@id/LinearSetsToolbar"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtMySetsPageNoSets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:text="Click '+ Add Set' to add a set"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="@color/secondary_text"/>
            <TextView
                android:id="@+id/txtMySetsPageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                android:padding="15dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <Button
           android:id="@+id/btnShowFilters"
           android:text="Filter"
           android:drawableRight="@drawable/outline_filter_alt_black_24"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="right"
           android:background="@color/transparent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"/>

        <include
            android:id="@+id/filterLyout"
            android:visibility="gone"
            layout="@layout/classsetsfilter_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/txtSearch"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint"
        android:inputType="text"
        android:textSize="14sp"
        android:padding="10dp"  
        android:layout_margin="5dp"
        android:textColorHint="?attr/textColor"
        android:textColor="?attr/textColor"
        android:background="@layout/rounded_border_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinearSetsToolbar"/>

    <ImageButton
        android:id="@+id/btnSearch"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"   
        android:src="@drawable/ic_search_white_24dp"
        android:scaleType="fitCenter" 
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/txtSearch"
        app:layout_constraintEnd_toEndOf="@id/txtSearch"
        app:layout_constraintBottom_toBottomOf="@id/txtSearch"/>

    <!--Progress-->
    <LinearLayout
        android:id="@+id/linear_mysetsprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_anchorGravity="center|top"
            app:layout_anchor="@+id/txtEmail"
            android:layout_centerInParent="true"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout">
            <TextView
                android:id="@+id/progressBarTextMySets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="5dp"/>
            <ProgressBar
                android:id="@+id/progressbarMySets"
                android:theme="@style/CircularProgress"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>