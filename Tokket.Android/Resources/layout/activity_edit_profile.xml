<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingStart="@dimen/padding_10"
    android:paddingEnd="@dimen/padding_10"
    android:paddingBottom="@dimen/padding_10">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutDisplayName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Display Name"
            android:layout_marginTop="10dp"
            app:hintEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnUpdateDisplayName">
            <EditText
                android:id="@+id/txtDisplayname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="10dp"
                android:maxLength="25"
                android:textColor = "@android:color/black"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnUpdateDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_alignParentRight="true"
            android:text="Update"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/WHITE"
            app:layout_constraintTop_toTopOf="@id/inputLayoutDisplayName" 
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutBio"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Bio"    
            app:hintEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="160"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutDisplayName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnBio">
            <EditText
                android:id="@+id/txtBio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="10dp"
                android:maxLength="160"
                android:textColor = "@android:color/black"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnBio"
            android:layout_width="wrap_content"
            android:layout_height="59dp" 
            android:text="Update"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/WHITE"
            app:layout_constraintTop_toTopOf="@id/inputLayoutBio" 
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutWebsite"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Website" 
            app:hintEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:errorTextAppearance="@style/error_appearance"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutBio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnWeb">
            <EditText
                android:id="@+id/txtWeb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="10dp"
                android:maxLength="100"
                android:textColor = "@android:color/black"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnWeb"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:text="Update"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/WHITE"
            app:layout_constraintTop_toTopOf="@id/inputLayoutWebsite"
            app:layout_constraintEnd_toEndOf="parent"/>
        <!--Country-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:id="@+id/inputLayoutCountry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Country"
            android:orientation="horizontal"
            android:gravity="left" 
            app:errorTextAppearance="@style/error_appearance"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutWebsite" 
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnUpdateCountryState">
            <AutoCompleteTextView
                android:id="@+id/txtCountry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="none"
                android:textSize="16sp"
                android:padding="10dp"
                android:editable="false"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnUpdateCountryState"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:text="Update"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/WHITE" 
            app:layout_constraintTop_toTopOf="@id/inputLayoutCountry"
            app:layout_constraintBottom_toBottomOf="@id/inputLayoutState"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--State-->

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:id="@+id/inputLayoutState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="State"
            android:orientation="horizontal"
            android:gravity="left"
            android:visibility="gone"
            app:errorTextAppearance="@style/error_appearance"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutCountry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnUpdateCountryState"
            tools:visibility="visible">
            <AutoCompleteTextView
                android:id="@+id/txtState"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="none"
                android:textSize="16sp"
                android:padding="10dp"
                android:editable="false"/>
        </com.google.android.material.textfield.TextInputLayout>
        
        <LinearLayout
            android:id="@+id/linearProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_centerInParent="true"
            android:backgroundTint="#80000000"
            android:background="@drawable/tileview_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updating..."
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="5dp"/>
            <ProgressBar
                android:id="@+id/progressCircle"
                android:theme="@style/CircularProgressBlue"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="86dp"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:padding="5dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
