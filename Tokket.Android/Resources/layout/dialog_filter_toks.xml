<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edittext_white_bg"
    android:padding="10dp">
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/close_24px"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>
    <!--TITLE 1-->
    <RadioGroup
        android:id="@+id/LinearFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#020104"
            android:text="Feed"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/btnGlobalToks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_tokkepedia"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:layout_marginBottom="5dp"
            android:text="Global Toks"
            android:checked="true"
            android:tag="9"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
        <RadioButton
            android:id="@+id/btnFeaturedToks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_tokkepedia"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:text="Featured Toks"
            android:tag="7"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
    </RadioGroup>
    <!--Filter By-->
    <RadioGroup
        android:id="@+id/LinearFilterBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#020104"
            android:text="Filter By"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/btnFilterByAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_classtok"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:checked="true"
            android:layout_marginBottom="5dp"
            android:text="All"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
        <RadioButton
            android:id="@+id/btnClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_classtok"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:layout_marginBottom="5dp"
            android:contentDescription="Class"
            android:text="Class Name"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
        <RadioButton
            android:id="@+id/btnCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_classtok"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:layout_marginBottom="5dp"
            android:contentDescription="Category"
            android:text="Category"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
        <RadioButton
            android:id="@+id/btnType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_classtok"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:contentDescription="Type"
            android:text="Type"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
    </RadioGroup>
    <!--Ascending and DescendingSort-->
    <RadioGroup
        android:id="@+id/linearSortTo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#020104"
            android:text="Reference ID/#"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/btnRefAscending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_tokkepedia"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:layout_marginBottom="5dp"
            android:text="Ascending"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
        <RadioButton
            android:id="@+id/btnRefDescending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_tokkepedia"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:layout_marginBottom="5dp"
            android:text="Descending"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#020104"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/btnTitleAscending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_tokkepedia"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:layout_marginBottom="5dp"
            android:text="Ascending"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
        <RadioButton
            android:id="@+id/btnTitleDescending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_filter_tokkepedia"
            android:padding="@dimen/padding_10"
            android:button="@null"
            android:layout_marginBottom="5dp"
            android:text="Descending"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
    </RadioGroup>
    <Button
        style="@style/buttonMain"
        android:id="@+id/btnApplyFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:text="Apply Filter"
        android:textColor="@color/WHITE"
        android:padding="@dimen/padding_10"
        android:textSize="16sp"/>
</LinearLayout>
