
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/bgColor"
    tools:context="com.journaldev.tablayoutviewpager.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/bgColor">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/holo_blue_light"
                    android:layout_gravity="center"
                    android:layout_below="@id/includeHeaderLayout"
                    android:id="@+id/imgSet"/>

                <TextView
                    android:id="@+id/lblMySetViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="SAMPLE PERSON"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="?attr/textColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/lblMySetViewTokGroup"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="SAMPLE PERSON"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>
                    <TextView
                        android:id="@+id/lblMySetViewTokType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="SAMPLE PERSON"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/lblMySetViewDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="DESCRIPTION"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="?attr/textColor"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="TOKS"
                        android:gravity="right"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>
                    <TextView
                        android:id="@+id/lblMySetViewToksCnt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="0"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/imgbtnSetsTokCards"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center|top"
                        android:src="@drawable/tokcards"/>
                    <ImageButton
                        android:id="@+id/imgbtnSetsTokMatch"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center|top"
                        android:src="@drawable/tokmatch"/>
                    <ImageButton
                        android:id="@+id/imgbtnSetsTokChoice"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center|top"
                        android:src="@drawable/tokchoice"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <include
            android:id="@+id/tabLayoutMySetsViewToks"
            layout="@layout/tabLayout_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerMySetsViewToks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="10dp"
        android:weightSum="2">
        <Button
            android:id="@+id/btnMySetsViewAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="+ Add Toks"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#007bff"/>
        <Button
            android:id="@+id/btnMySetsViewRemove"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="- Remove Toks"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#dc3545"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:visibility="gone"
        android:background="@color/transparent_black_color"
        tools:visibility="visible">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieLoading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading_circle_white.json"
            app:lottie_loop="true" />
        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Get remaining toks: 50/100"
            android:textColor="@color/WHITE"
            android:textSize="16sp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/lottieLoading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>