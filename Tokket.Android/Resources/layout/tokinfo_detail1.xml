<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left"
    android:layout_gravity="left">
    <View
        android:id="@+id/viewHorizontalTopLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lbl_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="?attr/textColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:autoLink="web"
            app:layout_constraintEnd_toStartOf="@id/linear_Reactions"/>
       
      <LinearLayout
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:gravity="left"
       android:paddingLeft="15dp"
       android:layout_gravity="center_horizontal|fill_horizontal"
       android:layout_centerInParent="true"
       android:orientation="horizontal"
       app:layout_constraintEnd_toEndOf="parent"
       android:id="@+id/linear_Reactions">
         
        <Button
            android:id="@+id/tokinfo_btnAccurate"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:text="check"
            android:contentDescription="accurate"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackground"
            android:textColor="@android:color/holo_green_dark"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/tokinfo_btnInaccurate"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:text="times"
                    android:onClick="OnClickInaccurate"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/red_500"/>
           
            </LinearLayout>
       

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_tok_info_total_reactions_detailComment"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:text="0"
                android:textStyle="bold"
                android:tag="0"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:padding="5dp"
                android:textColor="?attr/textColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <!--Add android:translationZ="90dp" to bring the view at the front of other view-->
            <ProgressBar
                android:id="@+id/circleprogressReaction"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="29dp"
                android:layout_width="29dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:translationZ="90dp"
                app:layout_constraintStart_toStartOf="@id/btn_tok_info_total_reactions_detailComment"
                app:layout_constraintEnd_toEndOf="@id/btn_tok_info_total_reactions_detailComment"
                app:layout_constraintTop_toTopOf="@id/btn_tok_info_total_reactions_detailComment"
                app:layout_constraintBottom_toBottomOf="@id/btn_tok_info_total_reactions_detailComment"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_inaccurate_detail"
        android:text="Inaccurate"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textColor="@color/red_500"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="10dp"
        android:layout_marginRight="34dp"
        android:layout_gravity="center_vertical|right"
         />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="97dp"
        android:gravity="center"
        android:onClick="OnClickImageToView"
        android:layout_gravity="center_horizontal|fill_horizontal"
        android:id="@+id/tokinfo_imgdetail"
        android:scaleType="fitCenter"/>
    <VideoView
        android:layout_width="97dp"
        android:layout_height="97dp"
         android:gravity="center"
         android:layout_gravity="center_horizontal|fill_horizontal"
        android:id="@+id/detailVid"
        android:visibility="gone"/>
    <LinearLayout
       android:id="@+id/linearTokInfo_detailComment"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:gravity="left"
       android:layout_marginLeft="15dp"
       android:padding="4dp"
       android:visibility="gone"
       android:orientation="horizontal"
       android:backgroundTint="@color/btnDisable"
       android:background="@drawable/linearboard_nopadding">
        <EditText
            android:id="@+id/EditTokInfo_detailcomment"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textStyle="normal"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/textColor"
            android:background="@drawable/rounded_edittext_white_bg"/>
        <Button
            android:id="@+id/btnTokInfo_detailComment"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Comment"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:contentDescription="inaccurate"
            android:backgroundTint="@color/red_500"/>
     
    </LinearLayout>
</LinearLayout>